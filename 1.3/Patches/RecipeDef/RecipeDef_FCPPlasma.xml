<?xml version="1.0" encoding="utf-8"?>
<!--
    ===== FCP Plasma Weapons Pack! =====

    == Range
    FCP_Gun_Plasma_Pistol_Bond = persona Plasma Pistol
    FCP_Gun_Plasma_Defender_Bond = persona Plasma Defender
    FCP_Gun_Plasma_Rifle_Bond = persona Plasma Rifle
    FCP_Gun_Q35_Matter_Modulator_Bond = persona Q-35 Matter Modulator
    FCP_Gun_Multiplas_Rifle_Bond = persona Multiplas Rifle
    FCP_Gun_Plasma_Caster_Bond = persona Plasma Caster
-->
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>FCP Plasma Weapons Pack!</li>
        </mods>

        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>Defs</xpath>
                    <value>
                        <!-- ===== Range ===== -->
                        <!-- FCP_Gun_Plasma_Pistol_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_FCP_Gun_Plasma_Pistol_Bond</defName>
                            <label>bond Plasma Pistol</label>
                            <description>Bond an Plasma Pistol.</description>
                            <jobString>Bonding a Plasma Pistol.</jobString>
                            <researchPrerequisite>ChargedShot</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>FCP_Gun_Plasma_Pistol</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>FCP_Gun_Plasma_Pistol</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <FCP_Gun_Plasma_Pistol_Bond>1</FCP_Gun_Plasma_Pistol_Bond>
                            </products>
                        </RecipeDef>

                        <!-- FCP_Gun_Plasma_Defender_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_FCP_Gun_Plasma_Defender_Bond</defName>
                            <label>bond Plasma Defender</label>
                            <description>Bond an Plasma Defender.</description>
                            <jobString>Bonding a Plasma Defender.</jobString>
                            <researchPrerequisite>ChargedShot</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>FCP_Gun_Plasma_Defender</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>FCP_Gun_Plasma_Defender</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <FCP_Gun_Plasma_Defender_Bond>1</FCP_Gun_Plasma_Defender_Bond>
                            </products>
                        </RecipeDef>

                        <!-- FCP_Gun_Plasma_Rifle_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_FCP_Gun_Plasma_Rifle_Bond</defName>
                            <label>bond Plasma Rifle</label>
                            <description>Bond an Plasma Rifle.</description>
                            <jobString>Bonding a Plasma Rifle.</jobString>
                            <researchPrerequisite>ChargedShot</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>FCP_Gun_Plasma_Rifle</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>FCP_Gun_Plasma_Rifle</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <FCP_Gun_Plasma_Rifle_Bond>1</FCP_Gun_Plasma_Rifle_Bond>
                            </products>
                        </RecipeDef>

                        <!-- FCP_Gun_Q35_Matter_Modulator_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_FCP_Gun_Q35_Matter_Modulator_Bond</defName>
                            <label>bond Q-35 Matter Modulator</label>
                            <description>Bond an Q-35 Matter Modulator.</description>
                            <jobString>Bonding a Q-35 Matter Modulator.</jobString>
                            <researchPrerequisite>ChargedShot</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>FCP_Gun_Q35_Matter_Modulator</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>FCP_Gun_Q35_Matter_Modulator</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <FCP_Gun_Q35_Matter_Modulator_Bond>1</FCP_Gun_Q35_Matter_Modulator_Bond>
                            </products>
                        </RecipeDef>

                        <!-- FCP_Gun_Multiplas_Rifle_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_FCP_Gun_Multiplas_Rifle_Bond</defName>
                            <label>bond Multiplas Rifle</label>
                            <description>Bond an Multiplas Rifle.</description>
                            <jobString>Bonding a Multiplas Rifle.</jobString>
                            <researchPrerequisite>ChargedShot</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>FCP_Gun_Multiplas_Rifle</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>FCP_Gun_Multiplas_Rifle</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <FCP_Gun_Multiplas_Rifle_Bond>1</FCP_Gun_Multiplas_Rifle_Bond>
                            </products>
                        </RecipeDef>

                        <!-- FCP_Gun_Plasma_Caster_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_FCP_Gun_Plasma_Caster_Bond</defName>
                            <label>bond Plasma Caster</label>
                            <description>Bond an Plasma Caster.</description>
                            <jobString>Bonding a Plasma Caster.</jobString>
                            <researchPrerequisite>ChargedShot</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>FCP_Gun_Plasma_Caster</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>FCP_Gun_Plasma_Caster</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <FCP_Gun_Plasma_Caster_Bond>1</FCP_Gun_Plasma_Caster_Bond>
                            </products>
                        </RecipeDef>
                    </value>
                </li>

                <li Class="XmlExtensions.OptionalPatch" MayRequire="imranfish.xmlextensions">
                    <modId>Daria40K.MightyPersonaBondForgePatch</modId>
                    <key>Daria40K_MightyPersonaBondForgePatch_FCPPlasmaWeaponsPack</key>
                    <defaultValue>true</defaultValue>
                    <caseFalse>
                        <!-- FCP_Gun_Plasma_Pistol_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_FCP_Gun_Plasma_Pistol_Bond"]</xpath>
                        </Operation>

                        <!-- FCP_Gun_Plasma_Defender_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_FCP_Gun_Plasma_Defender_Bond"]</xpath>
                        </Operation>

                        <!-- FCP_Gun_Plasma_Rifle_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_FCP_Gun_Plasma_Rifle_Bond"]</xpath>
                        </Operation>

                        <!-- FCP_Gun_Q35_Matter_Modulator_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_FCP_Gun_Q35_Matter_Modulator_Bond"]</xpath>
                        </Operation>

                        <!-- FCP_Gun_Multiplas_Rifle_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_FCP_Gun_Multiplas_Rifle_Bond"]</xpath>
                        </Operation>

                        <!-- FCP_Gun_Plasma_Caster_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_FCP_Gun_Plasma_Caster_Bond"]</xpath>
                        </Operation>
                    </caseFalse>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>
