<?xml version="1.0" encoding="utf-8"?>
<!--
    ===== [HRK] Gun Nut - "Item 62" Gauss Rifle =====

    == Range
    HRK_STALKER_Gauss_Bond = persona Item 62 Mk.I
    HRK_STALKER_Gauss_Sniper_Bond = persona Item 62 Mk.II
-->
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>[HRK] Gun Nut - "Item 62" Gauss Rifle</li>
        </mods>

        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs</xpath>
                    <value>
                        <!-- ===== Range ===== -->
                        <!-- persona Item 62 Mk.I -->
                        <RecipeDef>
                            <defName>Make_HRK_STALKER_Gauss_Bond</defName>
                            <label>bond Item 62 Mk.I</label>
                            <description>Bond an Item 62 Mk.I.</description>
                            <jobString>Bonding a Item 62 Mk.I.</jobString>
                            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
                            <effectWorking>Cook</effectWorking>
                            <soundWorking>Recipe_Machining</soundWorking>
                            <workAmount>200000</workAmount>
                            <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
                            <researchPrerequisite>HRK_Research_GunNut_STALKER_Gauss</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>HRK_STALKER_Gauss</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>BondingCore</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>HRK_STALKER_Gauss</li>
                                    <li>BondingCore</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <HRK_STALKER_Gauss_Bond>1</HRK_STALKER_Gauss_Bond>
                            </products>
                            <skillRequirements>
                                <Intellectual>15</Intellectual>
                            </skillRequirements>
                            <workSkill>Intellectual</workSkill>
                            <recipeUsers>
                                <li>BondingBench</li>
                            </recipeUsers>
                        </RecipeDef>

                        <!-- persona Item 62 Mk.II -->
                        <RecipeDef>
                            <defName>Make_HRK_STALKER_Gauss_Sniper_Bond</defName>
                            <label>bond Item 62 Mk.II</label>
                            <description>Bond an Item 62 Mk.II.</description>
                            <jobString>Bonding a Item 62 Mk.II.</jobString>
                            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
                            <effectWorking>Cook</effectWorking>
                            <soundWorking>Recipe_Machining</soundWorking>
                            <workAmount>200000</workAmount>
                            <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
                            <researchPrerequisite>HRK_Research_GunNut_STALKER_Gauss</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>HRK_STALKER_Gauss_Sniper</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>BondingCore</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>HRK_STALKER_Gauss_Sniper</li>
                                    <li>BondingCore</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <HRK_STALKER_Gauss_Sniper_Bond>1</HRK_STALKER_Gauss_Sniper_Bond>
                            </products>
                            <skillRequirements>
                                <Intellectual>15</Intellectual>
                            </skillRequirements>
                            <workSkill>Intellectual</workSkill>
                            <recipeUsers>
                                <li>BondingBench</li>
                            </recipeUsers>
                        </RecipeDef>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>