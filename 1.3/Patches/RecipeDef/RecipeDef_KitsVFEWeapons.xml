							<defName>Make_KIT_Gun_PlasmaPistol_Bond</defName>
							<label>bond plasma pistol</label>
							<description>Bond an plasma pistol.</description>
							<jobString>Bonding a plasma pistol.</jobString>
														<effectWorking>Cook</effectWorking>
							<ingredients>
