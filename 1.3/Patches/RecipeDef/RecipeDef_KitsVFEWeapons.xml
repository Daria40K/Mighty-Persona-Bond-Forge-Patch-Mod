							<products>
								<KIT_Gun_PlasmaSniper_Bond>1</KIT_Gun_PlasmaSniper_Bond>
							</products>
						</RecipeDef>
					</value>
				</li>

				<li Class="XmlExtensions.OptionalPatch" MayRequire="imranfish.xmlextensions">
					<modId>Daria40K.MightyPersonaBondForgePatch</modId>
					<key>Daria40K_MightyPersonaBondForgePatch_KitsVFEWeapons</key>
					<defaultValue>true</defaultValue>
					<caseFalse>
						<!-- KIT_CryptoHammer_Bond -->
						<Operation Class="XmlExtensions.PatchOperationRemove">
							<xpath>Defs/RecipeDef[defName="Make_KIT_CryptoHammer_Bond"]</xpath>
						</Operation>

						<!-- KIT_CryptoKnife_Bond -->
						<Operation Class="XmlExtensions.PatchOperationRemove">
							<xpath>Defs/RecipeDef[defName="Make_KIT_CryptoKnife_Bond"]</xpath>
						</Operation>

						<!-- KIT_CryptoSpear_Bond -->
						<Operation Class="XmlExtensions.PatchOperationRemove">
							<xpath>Defs/RecipeDef[defName="Make_KIT_CryptoSpear_Bond"]</xpath>
						</Operation>

						<!-- KIT_CryptoSword_Bond -->
						<Operation Class="XmlExtensions.PatchOperationRemove">
							<xpath>Defs/RecipeDef[defName="Make_KIT_CryptoSword_Bond"]</xpath>
						</Operation>

						<!-- KIT_Gun_PlasmaPistol_Bond -->
