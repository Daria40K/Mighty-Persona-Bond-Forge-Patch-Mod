<?xml version="1.0" encoding="utf-8"?>
<!-- ===== Kit's VFE Weapons ===== == Melee
	KIT_CryptoHammer_Bond = persona crypto hammer
	KIT_CryptoKnife_Bond = persona crypto knife
	KIT_CryptoSpear_Bond = persona crypto spear
	KIT_CryptoSword_Bond = persona crypto sword == Range
	KIT_Gun_PlasmaPistol_Bond = persona plasma pistol
	KIT_Gun_PlasmaRifle_Bond = persona plasma rifle
	KIT_Gun_PlasmaSMG_Bond = persona plasma SMG
	KIT_Gun_PlasmaSniper_Bond = persona plasma sniper
-->
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Kit's VFE Weapons</li>
		</mods>

		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs</xpath>
					<value>
						<!-- ===== Meele ===== -->
						<!-- KIT_CryptoHammer_Bond -->
						<RecipeDef ParentName="MPBFPM_RecipeDefBase">
							<defName>Make_KIT_CryptoHammer_Bond</defName>
							<label>bond crypto hammer</label>
							<description>Bond an crypto hammer.</description>
							<jobString>Bonding a crypto hammer.</jobString>
														<effectWorking>Cook</effectWorking>
							<ingredients>
								<li>
									<filter>
										<thingDefs>
											<li>KIT_CryptoHammer</li>
										</thingDefs>
									</filter>
									<count>1</count>
								</li>
							</ingredients>
							<fixedIngredientFilter>
								<thingDefs>
									<li>KIT_CryptoHammer</li>
								</thingDefs>
							</fixedIngredientFilter>
							<products>
								<KIT_CryptoHammer_Bond>1</KIT_CryptoHammer_Bond>
							</products>
						</RecipeDef>

						<!-- KIT_CryptoKnife_Bond -->
						<RecipeDef ParentName="MPBFPM_RecipeDefBase">
							<defName>Make_KIT_CryptoKnife_Bond</defName>
							<label>bond crypto knife</label>
							<description>Bond an crypto knife.</description>
							<jobString>Bonding a crypto knife.</jobString>
														<effectWorking>Cook</effectWorking>
							<ingredients>
								<li>
									<filter>
										<thingDefs>
											<li>KIT_CryptoKnife</li>
										</thingDefs>
									</filter>
									<count>1</count>
								</li>
							</ingredients>
							<fixedIngredientFilter>
								<thingDefs>
									<li>KIT_CryptoKnife</li>
								</thingDefs>
							</fixedIngredientFilter>
							<products>
								<KIT_CryptoKnife_Bond>1</KIT_CryptoKnife_Bond>
							</products>
						</RecipeDef>

						<!-- KIT_CryptoSpear_Bond -->
						<RecipeDef ParentName="MPBFPM_RecipeDefBase">
							<defName>Make_KIT_CryptoSpear_Bond</defName>
							<label>bond crypto spear</label>
							<description>Bond an crypto spear.</description>
