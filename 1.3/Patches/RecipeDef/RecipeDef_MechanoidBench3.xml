                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>BondingCore</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>Gun_MechaSniperRifle</li>
