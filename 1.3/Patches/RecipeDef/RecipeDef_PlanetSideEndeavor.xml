                        </RecipeDef>

                        <!-- NS_15_ENDEAVOR_LMG_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_NS_15_ENDEAVOR_LMG_Bond</defName>
                            <label>bond NS-15”Endeavor”LMG</label>
                            <description>Bond an NS-15”Endeavor”LMG.</description>
                            <jobString>Bonding a NS-15”Endeavor”LMG.</jobString>
                            <researchPrerequisite>ChargedShot</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>NS_15_ENDEAVOR_LMG</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>NS_15_ENDEAVOR_LMG</li>
