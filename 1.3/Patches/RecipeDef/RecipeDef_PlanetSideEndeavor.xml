                            <products>
                                <NS_15_ENDEAVOR_LMG_Bond>1</NS_15_ENDEAVOR_LMG_Bond>
                            </products>
                        </RecipeDef>

                        <!-- NS_357_Endeavor_Underboss_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_NS_357_Endeavor_Underboss_Bond</defName>
                            <label>bond NS-357”Endeavor”Underboss</label>
                            <description>Bond an NS-357”Endeavor”Underboss.</description>
                            <jobString>Bonding a NS-357”Endeavor”Underboss.</jobString>
                            <researchPrerequisite>ChargedShot</researchPrerequisite>
