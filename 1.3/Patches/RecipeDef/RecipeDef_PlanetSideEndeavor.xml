                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>NS_357_Endeavor_Underboss</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <NS_357_Endeavor_Underboss_Bond>1</NS_357_Endeavor_Underboss_Bond>
                            </products>
                        </RecipeDef>

                        <!-- NS_Firebug_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_NS_Firebug_Bond</defName>
                            <label>bond NS Firebug</label>
                            <description>Bond an NS Firebug.</description>
                            <jobString>Bonding a NS Firebug.</jobString>
                            <researchPrerequisite>MicroelectronicsBasics</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>NS_Firebug</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
