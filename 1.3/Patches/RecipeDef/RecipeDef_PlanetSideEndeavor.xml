                            <products>
                                <NS_Icebreaker_Bond>1</NS_Icebreaker_Bond>
                            </products>
                        </RecipeDef>
                    </value>
                </li>

                <li Class="XmlExtensions.OptionalPatch" MayRequire="imranfish.xmlextensions">
                    <modId>Daria40K.MightyPersonaBondForgePatch</modId>
                    <key>Daria40K_MightyPersonaBondForgePatch_PlanetSideEndeavorWeapons</key>
                    <defaultValue>true</defaultValue>
                    <caseFalse>
                        <!-- NS_7_ENDEAVOR_PDW_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_NS_7_ENDEAVOR_PDW_Bond"]</xpath>
                        </Operation>

                        <!-- NS_11_ENDEAVOR_AR_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_NS_11_ENDEAVOR_AR_Bond"]</xpath>
                        </Operation>

                        <!-- NS_11_Endeavor_Carbin_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_NS_11_Endeavor_Carbin_Bond"]</xpath>
                        </Operation>

                        <!-- NS_15_ENDEAVOR_LMG_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_NS_15_ENDEAVOR_LMG_Bond"]</xpath>
                        </Operation>

                        <!-- NS_357_Endeavor_Underboss_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_NS_357_Endeavor_Underboss_Bond"]</xpath>
                        </Operation>

                        <!-- NS_Firebug_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_NS_Firebug_Bond"]</xpath>
                        </Operation>

                        <!-- NS_Icebreaker_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_NS_Icebreaker_Bond"]</xpath>
                        </Operation>
                    </caseFalse>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>