<?xml version="1.0" encoding="utf-8"?>
<!--
    ===== PlanetSide Endeavor Weapons =====

    == Range
    NS_7_ENDEAVOR_PDW_Bond = persona NS-7”Endeavor”PDW
    NS_11_ENDEAVOR_AR_Bond = persona NS-11”Endeavor”AR
    NS_11_Endeavor_Carbin_Bond = persona NS-11”Endeavor”Carbin
    NS_15_ENDEAVOR_LMG_Bond = persona NS-15”Endeavor”LMG
    NS_357_Endeavor_Underboss_Bond = persona NS-357”Endeavor”Underboss
    NS_Firebug_Bond = persona NS Firebug
    NS_Icebreaker_Bond = persona NS Icebreaker
-->
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>PlanetSide Endeavor Weapons</li>
        </mods>

        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs</xpath>
                    <value>
                        <!-- NS_7_ENDEAVOR_PDW_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_NS_7_ENDEAVOR_PDW_Bond</defName>
                            <label>bond NS-7”Endeavor”PDW</label>
                            <description>Bond an NS-7”Endeavor”PDW.</description>
                            <jobString>Bonding a NS-7”Endeavor”PDW.</jobString>
                            <researchPrerequisite>ChargedShot</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>NS_7_ENDEAVOR_PDW</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>NS_7_ENDEAVOR_PDW</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <NS_7_ENDEAVOR_PDW_Bond>1</NS_7_ENDEAVOR_PDW_Bond>
                            </products>
                        </RecipeDef>

                        <!-- NS_11_ENDEAVOR_AR_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_NS_11_ENDEAVOR_AR_Bond</defName>
                            <label>bond NS-11”Endeavor”AR</label>
                            <description>Bond an NS-11”Endeavor”AR.</description>
                            <jobString>Bonding a NS-11”Endeavor”AR.</jobString>
                            <researchPrerequisite>ChargedShot</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>NS_11_ENDEAVOR_AR</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>NS_11_ENDEAVOR_AR</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <NS_11_ENDEAVOR_AR_Bond>1</NS_11_ENDEAVOR_AR_Bond>
                            </products>
                        </RecipeDef>

                        <!-- NS_11_Endeavor_Carbin_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_NS_11_Endeavor_Carbin_Bond</defName>
                            <label>bond NS-11”Endeavor”Carbin</label>
                            <description>Bond an NS-11”Endeavor”Carbin.</description>
                            <jobString>Bonding a NS-11”Endeavor”Carbin.</jobString>
                            <researchPrerequisite>ChargedShot</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>NS_11_Endeavor_Carbin</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>NS_11_Endeavor_Carbin</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <NS_11_Endeavor_Carbin_Bond>1</NS_11_Endeavor_Carbin_Bond>
