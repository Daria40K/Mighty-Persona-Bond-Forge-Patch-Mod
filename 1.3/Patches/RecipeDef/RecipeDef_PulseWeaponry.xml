<?xml version="1.0" encoding="utf-8"?>
<!--
    ===== Pulse Weaponry =====

    == Range
    Gun_PulseCarbine_Bond = persona pulse carbine
    Gun_PulsePistol_Bond = persona pulse pistol
    Gun_PulseRifle_Bond = persona pulse rifle
-->
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Pulse Weaponry</li>
        </mods>

        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs</xpath>
                    <value>
                        <!-- ===== Range ===== -->
                        <!-- Gun_PulseCarbine_Bond -->
                        <RecipeDef>
                            <defName>Make_Gun_PulseCarbine_Bond</defName>
                            <label>bond pulse carbine</label>
                            <description>Bond an pulse carbine.</description>
                            <jobString>Bonding a pulse carbine.</jobString>
                            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
                            <effectWorking>Cook</effectWorking>
                            <soundWorking>Recipe_Machining</soundWorking>
                            <workAmount>200000</workAmount>
                            <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
                            <researchPrerequisite>ChargedShot</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>Gun_PulseCarbine</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>BondingCore</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>Gun_PulseCarbine</li>
                                    <li>BondingCore</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <Gun_PulseCarbine_Bond>1</Gun_PulseCarbine_Bond>
                            </products>
                            <skillRequirements>
                                <Intellectual>15</Intellectual>
                            </skillRequirements>
                            <workSkill>Intellectual</workSkill>
                            <recipeUsers>
                                <li>BondingBench</li>
                            </recipeUsers>
                        </RecipeDef>

                        <!-- Gun_PulsePistol_Bond -->
                        <RecipeDef>
                            <defName>Make_Gun_PulsePistol_Bond</defName>
                            <label>bond pulse pistol</label>
                            <description>Bond an pulse pistol.</description>
                            <jobString>Bonding a pulse pistol.</jobString>
                            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
                            <effectWorking>Cook</effectWorking>
                            <soundWorking>Recipe_Machining</soundWorking>
                            <workAmount>200000</workAmount>
                            <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
                            <researchPrerequisite>ChargedShot</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>Gun_PulsePistol</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>BondingCore</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>Gun_PulsePistol</li>
                                    <li>BondingCore</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <Gun_PulsePistol_Bond>1</Gun_PulsePistol_Bond>
                            </products>
                            <skillRequirements>
                                <Intellectual>15</Intellectual>
                            </skillRequirements>
                            <workSkill>Intellectual</workSkill>
                            <recipeUsers>
                                <li>BondingBench</li>
                            </recipeUsers>
                        </RecipeDef>

                        <!-- Gun_PulseRifle_Bond -->
                        <RecipeDef>
                            <defName>Make_Gun_PulseRifle_Bond</defName>
                            <label>bond pulse rifle</label>
                            <description>Bond an pulse rifle.</description>
                            <jobString>Bonding a pulse rifle.</jobString>
                            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
                            <effectWorking>Cook</effectWorking>
                            <soundWorking>Recipe_Machining</soundWorking>
                            <workAmount>200000</workAmount>
                            <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
                            <researchPrerequisite>ChargedShot</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>Gun_PulseRifle</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>BondingCore</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>Gun_PulseRifle</li>
                                    <li>BondingCore</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <Gun_PulseRifle_Bond>1</Gun_PulseRifle_Bond>
                            </products>
                            <skillRequirements>
                                <Intellectual>15</Intellectual>
                            </skillRequirements>
                            <workSkill>Intellectual</workSkill>
                            <recipeUsers>
                                <li>BondingBench</li>
                            </recipeUsers>
                        </RecipeDef>
                    </value>
                </li>

                <li Class="XmlExtensions.OptionalPatch" MayRequire="imranfish.xmlextensions">
                    <modId>Daria40K.MightyPersonaBondForgePatch</modId>
                    <key>Daria40K_MightyPersonaBondForgePatch_PulseWeaponry</key>
                    <defaultValue>true</defaultValue>
                    <caseFalse>
                        <!-- Gun_PulseCarbine_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_Gun_PulseCarbine_Bond"]</xpath>
                        </Operation>

                        <!-- Gun_PulsePistol_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_Gun_PulsePistol_Bond"]</xpath>
                        </Operation>

                        <!-- Gun_PulseRifle_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_Gun_PulseRifle_Bond"]</xpath>
                        </Operation>
                    </caseFalse>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>