<?xml version="1.0" encoding="utf-8"?>
<!--
    ===== [M.W]Resonant Munitions =====

    == Range
    Gun_GRAVITY_GUN_Bond = persona gravity gun
    Gun_TAU_CANNON_Bond = persona tau cannon
-->
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>[M.W]Resonant Munitions</li>
        </mods>

        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs</xpath>
                    <value>
                        <!-- ===== Range ===== -->
                        <!-- Gun_GRAVITY_GUN_Bond -->
                        <RecipeDef>
                            <defName>Make_Gun_GRAVITY_GUN_Bond</defName>
                            <label>bond gravity gun</label>
                            <description>Bond an gravity gun.</description>
                            <jobString>Bonding a gravity gun.</jobString>
                            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
                            <effectWorking>Cook</effectWorking>
                            <soundWorking>Recipe_Machining</soundWorking>
                            <workAmount>200000</workAmount>
                            <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>Gun_GRAVITY_GUN</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>BondingCore</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>Gun_GRAVITY_GUN</li>
                                    <li>BondingCore</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <Gun_GRAVITY_GUN_Bond>1</Gun_GRAVITY_GUN_Bond>
                            </products>
                            <skillRequirements>
                                <Intellectual>15</Intellectual>
                            </skillRequirements>
                            <workSkill>Intellectual</workSkill>
                            <recipeUsers>
                                <li>BondingBench</li>
                            </recipeUsers>
                        </RecipeDef>

                        <!-- Gun_TAU_CANNON_Bond -->
                        <RecipeDef>
                            <defName>Make_Gun_TAU_CANNON_Bond</defName>
                            <label>bond tau cannon</label>
                            <description>Bond an tau cannon.</description>
                            <jobString>Bonding a tau cannon.</jobString>
                            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
                            <effectWorking>Cook</effectWorking>
                            <soundWorking>Recipe_Machining</soundWorking>
                            <workAmount>200000</workAmount>
                            <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>Gun_TAU_CANNON</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>BondingCore</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>Gun_TAU_CANNON</li>
                                    <li>BondingCore</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <Gun_TAU_CANNON_Bond>1</Gun_TAU_CANNON_Bond>
                            </products>
                            <skillRequirements>
                                <Intellectual>15</Intellectual>
                            </skillRequirements>
                            <workSkill>Intellectual</workSkill>
                            <recipeUsers>
                                <li>BondingBench</li>
                            </recipeUsers>
                        </RecipeDef>
                    </value>
                </li>

                <li Class="XmlExtensions.OptionalPatch" MayRequire="imranfish.xmlextensions">
                    <modId>Daria40K.MightyPersonaBondForgePatch</modId>
                    <key>Daria40K_MightyPersonaBondForgePatch_ResonantMunitions</key>
                    <defaultValue>true</defaultValue>
                    <caseFalse>
                        <!-- Gun_GRAVITY_GUN_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_Gun_GRAVITY_GUN_Bond"]</xpath>
                        </Operation>

                        <!-- Gun_TAU_CANNON_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_Gun_TAU_CANNON_Bond"]</xpath>
                        </Operation>
                    </caseFalse>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>