<?xml version="1.0" encoding="utf-8"?>
<!--
    ===== Vanilla XCOM Chosen Weapons =====

    == Range
    XCOM_Gun_DisruptorRifle_Bond = persona Disruptor rifle
    XCOM_Gun_ChosenPistol_Bond = persona Darkclaw
    XCOM_Gun_ChosenShotgun_Bond = persona Arashi
    XCOM_Gun_ChosenSniperRifle_Bond = persona Darklance

    == Melee
    XCOM_MeleeWeapon_Katana_Bond = persona Katana
-->
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla XCOM Chosen Weapons</li>
        </mods>

        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>Defs</xpath>
                    <value>
                        <!-- XCOM_Gun_DisruptorRifle_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_XCOM_Gun_DisruptorRifle_Bond</defName>
                            <label>bond Disruptor rifle</label>
                            <description>Bond an Disruptor rifle.</description>
                            <jobString>Bonding a Disruptor rifle.</jobString>
                            <researchPrerequisite>ChargedShot</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>XCOM_Gun_DisruptorRifle</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>XCOM_Gun_DisruptorRifle</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <XCOM_Gun_DisruptorRifle_Bond>1</XCOM_Gun_DisruptorRifle_Bond>
                            </products>
                        </RecipeDef>

                        <!-- XCOM_Gun_ChosenPistol_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_XCOM_Gun_ChosenPistol_Bond</defName>
                            <label>bond Darkclaw</label>
                            <description>Bond an Darkclaw.</description>
                            <jobString>Bonding a Darkclaw.</jobString>
                            <researchPrerequisite>ChargedShot</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>XCOM_Gun_ChosenPistol</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>XCOM_Gun_ChosenPistol</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <XCOM_Gun_ChosenPistol_Bond>1</XCOM_Gun_ChosenPistol_Bond>
                            </products>
                        </RecipeDef>

                        <!-- XCOM_Gun_ChosenShotgun_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_XCOM_Gun_ChosenShotgun_Bond</defName>
                            <label>bond Arashi</label>
                            <description>Bond an Arashi.</description>
                            <jobString>Bonding a Arashi.</jobString>
                            <researchPrerequisite>ChargedShot</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>XCOM_Gun_ChosenShotgun</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>XCOM_Gun_ChosenShotgun</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <XCOM_Gun_ChosenShotgun_Bond>1</XCOM_Gun_ChosenShotgun_Bond>
                            </products>
                        </RecipeDef>

                        <!-- XCOM_Gun_ChosenSniperRifle_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_XCOM_Gun_ChosenSniperRifle_Bond</defName>
                            <label>bond Darklance</label>
                            <description>Bond an Darklance.</description>
                            <jobString>Bonding a Darklance.</jobString>
                            <researchPrerequisite>ChargedShot</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>XCOM_Gun_ChosenSniperRifle</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>XCOM_Gun_ChosenSniperRifle</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <XCOM_Gun_ChosenSniperRifle_Bond>1</XCOM_Gun_ChosenSniperRifle_Bond>
                            </products>
                        </RecipeDef>

                        <!-- XCOM_MeleeWeapon_Katana_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_XCOM_MeleeWeapon_Katana_Bond</defName>
                            <label>bond Katana</label>
                            <description>Bond an Katana.</description>
                            <jobString>Bonding a Katana.</jobString>
                            <researchPrerequisite>XCOM_ChosenWeapons</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>XCOM_MeleeWeapon_Katana</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>XCOM_MeleeWeapon_Katana</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <XCOM_MeleeWeapon_Katana_Bond>1</XCOM_MeleeWeapon_Katana_Bond>
                            </products>
                        </RecipeDef>
                    </value>
                </li>

                <li Class="XmlExtensions.OptionalPatch" MayRequire="imranfish.xmlextensions">
                    <modId>Daria40K.MightyPersonaBondForgePatch</modId>
                    <key>Daria40K_MightyPersonaBondForgePatch_VanillaXCOMChosenWeapons</key>
                    <defaultValue>true</defaultValue>
                    <caseFalse>
                        <!-- XCOM_Gun_DisruptorRifle_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_XCOM_Gun_DisruptorRifle_Bond"]</xpath>
                        </Operation>

                        <!-- XCOM_Gun_ChosenPistol_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_XCOM_Gun_ChosenPistol_Bond"]</xpath>
                        </Operation>

                        <!-- XCOM_Gun_ChosenShotgun_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_XCOM_Gun_ChosenShotgun_Bond"]</xpath>
                        </Operation>

                        <!-- XCOM_Gun_ChosenSniperRifle_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_XCOM_Gun_ChosenSniperRifle_Bond"]</xpath>
                        </Operation>

                        <!-- XCOM_MeleeWeapon_Katana_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_XCOM_MeleeWeapon_Katana_Bond"]</xpath>
                        </Operation>
                    </caseFalse>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>