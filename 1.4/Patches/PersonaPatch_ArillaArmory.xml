<?xml version="1.0" encoding="utf-8"?>
<!--
    ===== Arilla Tech =====

    == Range
    Gun_ArillaAR_Bond = persona arilla assaultrifle
    Gun_ArillaMarksman_Bond = persona arilla marksmanrifle
