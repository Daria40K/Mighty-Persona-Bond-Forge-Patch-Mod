      <Operation Class="XmlExtensions.OptionalPatch">
        <modId>Daria40K.MightyPersonaBondForgePatch</modId>
        <key>Daria40K_MightyPersonaBondForgePatch_QuasimorphRealwarearmoury</key>
        <defaultValue>true</defaultValue>

        <caseTrue>
          <Operation Class="XmlExtensions.PatchOperationAdd">
            <xpath>Defs</xpath>
            <value>
              <ThingDef ParentName="QM_Gun_CarnagePistol_Bond">
                <defName>QM_Gun_CarnagePistol_Bond</defName>
              </ThingDef>
              <ThingDef ParentName="QM_Gun_RetributionAssaultRifle_Bond">
                <defName>QM_Gun_RetributionAssaultRifle_Bond</defName>
              </ThingDef>
              <ThingDef ParentName="Bullet_CarnagePistol_Bond">
