<?xml version="1.0" encoding="utf-8"?>
<!--
    ===== AQ - Weapons Advanced =====

    == Range
    AQChargeRifle_Bond = persona PU145 charge rifle
    AQMinigun_Bond = persona PU145 minigun
-->
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>AQ - Weapons Advanced</li>
        </mods>

        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs</xpath>
                    <value>
                        <!-- AQChargeRifle_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_AQChargeRifle_Bond</defName>
                            <label>bond PU145 charge rifle</label>
                            <description>Bond an PU145 charge rifle.</description>
                            <jobString>Bonding a PU145 charge rifle.</jobString>
                            <researchPrerequisite>ChargedShot</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>AQChargeRifle</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>AQChargeRifle</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <AQChargeRifle_Bond>1</AQChargeRifle_Bond>
                            </products>
                        </RecipeDef>

                        <!-- AQMinigun_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_AQMinigun_Bond</defName>
                            <label>bond PU145 minigun</label>
                            <description>Bond an PU145 minigun.</description>
                            <jobString>Bonding a PU145 minigun.</jobString>
                            <researchPrerequisite>MultibarrelWeapons</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>AQMinigun</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>AQMinigun</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <AQMinigun_Bond>1</AQMinigun_Bond>
                            </products>
                        </RecipeDef>
                    </value>
                </li>

                <li Class="XmlExtensions.OptionalPatch" MayRequire="imranfish.xmlextensions">
                    <modId>Daria40K.MightyPersonaBondForgePatch</modId>
                    <key>Daria40K_MightyPersonaBondForgePatch_AQWeaponsAdvanced</key>
                    <defaultValue>true</defaultValue>
                    <caseFalse>
                        <!-- AQChargeRifle_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_AQChargeRifle_Bond"]</xpath>
                        </Operation>

                        <!-- AQMinigun_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_AQMinigun_Bond"]</xpath>
                        </Operation>
                    </caseFalse>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>