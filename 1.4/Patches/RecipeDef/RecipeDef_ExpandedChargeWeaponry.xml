<?xml version="1.0" encoding="utf-8"?>
<!--
    ===== Expanded Charge Weaponry =====
-->
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Expanded Charge Weaponry</li>
        </mods>

        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs</xpath>
                    <value>
                        <!-- Gun_HvyCharge_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_Gun_HvyCharge_Bond</defName>
                            <label>bond Heavy Charge Rifle</label>
                            <description>Bond an Heavy Charge Rifle.</description>
                            <jobString>Bonding a Heavy Charge Rifle.</jobString>
                            <researchPrerequisite>ChargedShot</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>Gun_HvyCharge</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>Gun_HvyCharge</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <Gun_HvyCharge_Bond>1</Gun_HvyCharge_Bond>
                            </products>
                        </RecipeDef>

                        <!-- Gun_SnpCharge_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_Gun_SnpCharge_Bond</defName>
                            <label>bond Charge Sniper</label>
                            <description>Bond an Charge Sniper.</description>
                            <jobString>Bonding a Charge Sniper.</jobString>
                            <researchPrerequisite>ChargedShot</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>Gun_SnpCharge</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>Gun_SnpCharge</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <Gun_SnpCharge_Bond>1</Gun_SnpCharge_Bond>
                            </products>
                        </RecipeDef>

                        <!-- Gun_SMGCharge_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_Gun_SMGCharge_Bond</defName>
                            <label>bond Charge Stormgun</label>
                            <description>Bond an Charge Stormgun.</description>
                            <jobString>Bonding a Charge Stormgun.</jobString>
                            <researchPrerequisite>ChargedShot</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>Gun_SMGCharge</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>Gun_SMGCharge</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <Gun_SMGCharge_Bond>1</Gun_SMGCharge_Bond>
                            </products>
                        </RecipeDef>
                    </value>
                </li>

                <li Class="XmlExtensions.OptionalPatch" MayRequire="imranfish.xmlextensions">
                    <modId>Daria40K.MightyPersonaBondForgePatch</modId>
                    <key>Daria40K_MightyPersonaBondForgePatch_ExpandedChargeWeaponry</key>
                    <defaultValue>true</defaultValue>
                    <caseFalse>
                        <!-- Gun_HvyCharge -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_Gun_HvyCharge"]</xpath>
                        </Operation>

                        <!-- Gun_SnpCharge -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_Gun_SnpCharge"]</xpath>
                        </Operation>

                        <!-- Gun_SMGCharge -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_Gun_SMGCharge"]</xpath>
                        </Operation>
                    </caseFalse>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>