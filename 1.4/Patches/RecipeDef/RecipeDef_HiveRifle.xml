<?xml version="1.0" encoding="utf-8"?>
<!--
    ===== Hive Rifle =====

    == Range
    Hive_Rifle_Bond = persona Hive
-->
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Hive Rifle</li>
        </mods>

        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs</xpath>
                    <value>
                        <!-- ===== Range ===== -->
                        <!-- Hive_Rifle_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_Hive_Rifle_Bond</defName>
                            <label>bond Hive</label>
                            <description>Bond an Hive.</description>
                            <jobString>Bonding a Hive.</jobString>
                            <researchPrerequisite>Bound_Research</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>Hive_Rifle</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>PersonaBondForge_ThingDef_BondingCore</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>Hive_Rifle</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <Hive_Rifle_Bond>1</Hive_Rifle_Bond>
                            </products>
                        </RecipeDef>
                    </value>
                </li>

                <li Class="XmlExtensions.OptionalPatch" MayRequire="imranfish.xmlextensions">
                    <modId>Daria40K.MightyPersonaBondForgePatch</modId>
                    <key>Daria40K_MightyPersonaBondForgePatch_HiveRifle</key>
                    <defaultValue>true</defaultValue>
                    <caseFalse>
                        <!-- Hive_Rifle_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_Hive_Rifle_Bond"]</xpath>
                        </Operation>
                    </caseFalse>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>