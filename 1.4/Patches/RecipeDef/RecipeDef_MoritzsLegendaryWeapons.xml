<?xml version="1.0" encoding="utf-8"?>
<!--
    ===== Moritz's LegendaryWeapons (Continued) =====

    == Melee
    Legendary_EnergySword_Bond = persona Lightbringer

    == Range
    Legendary_Rifle_Bond = persona Glotunus
    Legendary_Zeaus_Bond = persona Zeaus
    Legendary_Diablo_Bond = persona Diablo
    Legendary_wl4u_Bond = persona WL-4u
    Legendary_SAP_Bond = persona spray n´Prey
-->
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Moritz's LegendaryWeapons (Continued)</li>
        </mods>

        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs</xpath>
                    <value>
                        <!-- ===== Melee ===== -->
                        <!-- Legendary_EnergySword_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_Legendary_EnergySword_Bond</defName>
                            <label>bond Lightbringer</label>
                            <description>Bond an Lightbringer.</description>
                            <jobString>Bonding a Lightbringer.</jobString>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>Legendary_EnergySword</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>PersonaBondForge_ThingDef_BondingCore</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>Legendary_EnergySword</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <Legendary_EnergySword_Bond>1</Legendary_EnergySword_Bond>
                            </products>
                        </RecipeDef>

                        <!-- ===== Ranged ===== -->
                        <!-- Legendary_Rifle_Bond -->
