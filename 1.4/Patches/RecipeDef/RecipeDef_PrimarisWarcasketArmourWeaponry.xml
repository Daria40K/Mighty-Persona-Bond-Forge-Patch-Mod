<?xml version="1.0" encoding="utf-8"?>
<!--
    ===== Primaris warcasket armour and weaponry =====

    == Melee
    VFEP_WarcasketMeleeWeapon_PowerSword_Bond = persona warcasket power sword
    VFEP_WarcasketMeleeWeapon_ChainSword_Bond = persona warcasket chainsword

    == Range
    VFEP_WarcasketGun_AutoBolter_Bond = persona warcasket auto-bolter
    VFEP_WarcasketGun_HeavyBolterRifle_Bond = persona warcasket heavy bolter rifle
    VFEP_WarcasketGun_PlasmaRifle_Bond = persona warcasket plasma rifle
-->
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Primaris warcasket armour and weaponry</li>
        </mods>

        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs</xpath>
                    <value>
                        <!-- ===== Melee ===== -->
                        <!-- VFEP_WarcasketMeleeWeapon_PowerSword_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_VFEP_WarcasketMeleeWeapon_PowerSword_Bond</defName>
                            <label>bond warcasket power sword</label>
                            <description>Bond an warcasket power sword.</description>
                            <jobString>Bonding a warcasket power sword.</jobString>
                            <researchPrerequisite>VFEP_Warcaskets</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>VFEP_WarcasketMeleeWeapon_PowerSword</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>PersonaBondForge_ThingDef_BondingCore</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>VFEP_WarcasketMeleeWeapon_PowerSword</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <VFEP_WarcasketMeleeWeapon_PowerSword_Bond>1</VFEP_WarcasketMeleeWeapon_PowerSword_Bond>
                            </products>
                        </RecipeDef>

                        <!-- VFEP_WarcasketMeleeWeapon_ChainSword_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_VFEP_WarcasketMeleeWeapon_ChainSword_Bond</defName>
                            <label>bond warcasket chainsword</label>
                            <description>Bond an warcasket chainsword.</description>
                            <jobString>Bonding a warcasket chainsword.</jobString>
                            <researchPrerequisite>VFEP_Warcaskets</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>VFEP_WarcasketMeleeWeapon_ChainSword</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>PersonaBondForge_ThingDef_BondingCore</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>VFEP_WarcasketMeleeWeapon_ChainSword</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <VFEP_WarcasketMeleeWeapon_ChainSword_Bond>1</VFEP_WarcasketMeleeWeapon_ChainSword_Bond>
                            </products>
                        </RecipeDef>

                        <!-- ===== Range ===== -->
                        <!-- VFEP_WarcasketGun_AutoBolter_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_VFEP_WarcasketGun_AutoBolter_Bond</defName>
                            <label>bond warcasket auto-bolter</label>
                            <description>Bond an warcasket auto-bolter.</description>
                            <jobString>Bonding a warcasket auto-bolter.</jobString>
                            <researchPrerequisite>VFEP_Warcaskets</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>VFEP_WarcasketGun_AutoBolter</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>PersonaBondForge_ThingDef_BondingCore</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>VFEP_WarcasketGun_AutoBolter</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <VFEP_WarcasketGun_AutoBolter_Bond>1</VFEP_WarcasketGun_AutoBolter_Bond>
                            </products>
                        </RecipeDef>

                        <!-- VFEP_WarcasketGun_HeavyBolterRifle_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_VFEP_WarcasketGun_HeavyBolterRifle_Bond</defName>
                            <label>bond warcasket heavy bolter rifle</label>
                            <description>Bond an warcasket heavy bolter rifle.</description>
                            <jobString>Bonding a warcasket heavy bolter rifle.</jobString>
                            <researchPrerequisite>VFEP_Warcaskets</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>VFEP_WarcasketGun_HeavyBolterRifle</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>PersonaBondForge_ThingDef_BondingCore</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>VFEP_WarcasketGun_HeavyBolterRifle</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <VFEP_WarcasketGun_HeavyBolterRifle_Bond>1</VFEP_WarcasketGun_HeavyBolterRifle_Bond>
                            </products>
                        </RecipeDef>

                        <!-- VFEP_WarcasketGun_PlasmaRifle_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_VFEP_WarcasketGun_PlasmaRifle_Bond</defName>
                            <label>bond warcasket plasma rifle</label>
                            <description>Bond an warcasket plasma rifle.</description>
                            <jobString>Bonding a warcasket plasma rifle.</jobString>
                            <researchPrerequisite>VFEP_Warcaskets</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>VFEP_WarcasketGun_PlasmaRifle</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>PersonaBondForge_ThingDef_BondingCore</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>VFEP_WarcasketGun_PlasmaRifle</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <VFEP_WarcasketGun_PlasmaRifle_Bond>1</VFEP_WarcasketGun_PlasmaRifle_Bond>
                            </products>
                        </RecipeDef>
                    </value>
                </li>

                <li Class="XmlExtensions.OptionalPatch" MayRequire="imranfish.xmlextensions">
                    <modId>Daria40K.MightyPersonaBondForgePatch</modId>
                    <key>Daria40K_MightyPersonaBondForgePatch_Primariswarcasketarmourweaponry</key>
                    <defaultValue>true</defaultValue>
                    <caseFalse>
                        <!-- VFEP_WarcasketMeleeWeapon_PowerSword_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_VFEP_WarcasketMeleeWeapon_PowerSword_Bond"]</xpath>
                        </Operation>

                        <!-- VFEP_WarcasketMeleeWeapon_ChainSword_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_VFEP_WarcasketMeleeWeapon_ChainSword_Bond"]</xpath>
                        </Operation>

                        <!-- VFEP_WarcasketGun_AutoBolter_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_VFEP_WarcasketGun_AutoBolter_Bond"]</xpath>
                        </Operation>

                        <!-- VFEP_WarcasketGun_HeavyBolterRifle_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_VFEP_WarcasketGun_HeavyBolterRifle_Bond"]</xpath>
                        </Operation>

                        <!-- VFEP_WarcasketGun_PlasmaRifle_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_VFEP_WarcasketGun_PlasmaRifle_Bond"]</xpath>
                        </Operation>
                    </caseFalse>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>