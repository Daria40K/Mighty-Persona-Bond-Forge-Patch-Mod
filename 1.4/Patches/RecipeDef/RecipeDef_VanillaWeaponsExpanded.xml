                            <jobString>Bonding a charge pistol.</jobString>
                            <researchPrerequisite>ChargedShot</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>VWE_Gun_ChargePistol</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>PersonaBondForge_ThingDef_BondingCore</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>VWE_Gun_ChargePistol</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <VWE_Gun_BondChargePistol>1</VWE_Gun_BondChargePistol>
                            </products>
                        </RecipeDef>


