                        <!-- Alien_Rifle_Bond -->
                        <RecipeDef>
                            <defName>Make_Alien_Rifle_Bond</defName>
                            <label>bond Magnetic alien rifle</label>
                            <description>Bond an Magnetic alien rifle.</description>
                            <jobString>Bonding a Magnetic alien rifle.</jobString>
                            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
                            <effectWorking>Cook</effectWorking>
                            <soundWorking>Recipe_Machining</soundWorking>
                            <workAmount>200000</workAmount>
                            <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
                            <researchPrerequisite>ChargedShot</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>Alien_Rifle</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>PersonaBondForge_ThingDef_BondingCore</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>Alien_Rifle</li>
                                    <li>PersonaBondForge_ThingDef_BondingCore</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <Alien_Rifle_Bond>1</Alien_Rifle_Bond>
                            </products>
                            <skillRequirements>
                                <Intellectual>15</Intellectual>
                            </skillRequirements>
                            <workSkill>Intellectual</workSkill>
                            <recipeUsers>
                                <li>PersonaBondForge_ThingDef_BondingBench</li>
                            </recipeUsers>
                        </RecipeDef>

