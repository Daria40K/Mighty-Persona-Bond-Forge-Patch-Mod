                                    <!-- EW_Gun_EltexLance_Bond -->
                                    <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                                        <defName>Make_EW_Gun_EltexLance_Bond</defName>
                                        <label>bond eltex lance</label>
                                        <description>Bond an eltex lance.</description>
                                        <jobString>Bonding a eltex lance.</jobString>
                                        <researchPrerequisite>EW_EltexWeaponry</researchPrerequisite>
                                        <ingredients>
                                            <li>
                                                <filter>
                                                    <thingDefs>
                                                        <li>EW_Gun_EltexLance</li>
                                                    </thingDefs>
                                                </filter>
                                                <count>1</count>
                                            </li>
                                        </ingredients>
                                        <fixedIngredientFilter>
                                            <thingDefs>
                                                <li>EW_Gun_EltexLance</li>
                                            </thingDefs>
                                        </fixedIngredientFilter>
                                        <products>
                                            <EW_Gun_EltexLance_Bond>1</EW_Gun_EltexLance_Bond>
                                        </products>
                                    </RecipeDef>
                                </value>
                            </Operation>
                        </caseTrue>
                    </li>
                </operations>
            </match>
        </match>
    </Operation>
</Patch>
