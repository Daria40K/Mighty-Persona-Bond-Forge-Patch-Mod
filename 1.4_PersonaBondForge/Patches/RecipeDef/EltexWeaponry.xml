<?xml version="1.0" encoding="utf-8"?>
<!--
    ===== Eltex Weaponry =====
-->
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Eltex Weaponry</li>
        </mods>

        <match Class="PatchOperationFindMod">
            <mods>
                <li>XML Extensions</li>
            </mods>

            <nomatch Class="PatchOperationAdd">
                <xpath>Defs</xpath>
                <value>
                    <!-- EW_Gun_EltexPistol_Bond -->
                    <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                        <defName>Make_EW_Gun_EltexPistol_Bond</defName>
                        <label>bond eltex pistol</label>
                        <description>Bond an eltex pistol.</description>
                        <jobString>Bonding a eltex pistol.</jobString>
                        <researchPrerequisite>EW_EltexWeaponry</researchPrerequisite>
                        <ingredients>
                            <li>
                                <filter>
                                    <thingDefs>
                                        <li>EW_Gun_EltexPistol</li>
                                    </thingDefs>
                                </filter>
                                <count>1</count>
                            </li>
                        </ingredients>
                        <fixedIngredientFilter>
                            <thingDefs>
                                <li>EW_Gun_EltexPistol</li>
                            </thingDefs>
                        </fixedIngredientFilter>
                        <products>
                            <EW_Gun_EltexPistol_Bond>1</EW_Gun_EltexPistol_Bond>
                        </products>
                    </RecipeDef>

                    <!-- EW_Gun_EltexSMG_Bond -->
                    <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                        <defName>Make_EW_Gun_EltexSMG_Bond</defName>
                        <label>bond eltex SMG</label>
