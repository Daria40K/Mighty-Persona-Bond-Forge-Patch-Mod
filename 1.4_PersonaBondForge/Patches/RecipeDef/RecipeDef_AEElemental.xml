								</li>
							</ingredients>
							<fixedIngredientFilter>
								<thingDefs>
									<li>HALCYZOM_Sonic_Shredder</li>
								</thingDefs>
							</fixedIngredientFilter>
							<products>
								<HALCYZOM_Sonic_Shredder_Bond>1</HALCYZOM_Sonic_Shredder_Bond>
							</products>
						</RecipeDef>
					</value>
				</li>

				<li Class="PatchOperationFindMod">
					<mods>
						<li>XML Extensions</li>
					</mods>

					<nomatch Class="PatchOperationAdd">
						<xpath>Defs</xpath>
						<value>
							<!-- Make_HALCYZOM_Cryoblaster_Bond -->
							<RecipeDef ParentName="Make_HALCYZOM_Cryoblaster_Bond">
								<defName>Make_HALCYZOM_Cryoblaster_Bond</defName>
							</RecipeDef>

							<!-- Make_HALCYZOM_Plasmabolter_Bond -->
							<RecipeDef ParentName="Make_HALCYZOM_Plasmabolter_Bond">
								<defName>Make_HALCYZOM_Plasmabolter_Bond</defName>
							</RecipeDef>

							<!-- Make_HALCYZOM_Homicide_Applicator_Bond -->
							<RecipeDef ParentName="Make_HALCYZOM_Homicide_Applicator_Bond">
								<defName>Make_HALCYZOM_Homicide_Applicator_Bond</defName>
							</RecipeDef>

							<!-- Make_HALCYZOM_Problem_Dissolver_Bond -->
							<RecipeDef ParentName="Make_HALCYZOM_Problem_Dissolver_Bond">
								<defName>Make_HALCYZOM_Problem_Dissolver_Bond</defName>
							</RecipeDef>

							<!-- Make_HALCYZOM_Sonic_Shredder_Bond -->
							<RecipeDef ParentName="Make_HALCYZOM_Sonic_Shredder_Bond">
								<defName>Make_HALCYZOM_Sonic_Shredder_Bond</defName>
							</RecipeDef>
						</value>
					</nomatch>

					<match Class="PatchOperationSequence">
						<operations>
							<li Class="XmlExtensions.OptionalPatch" MayRequire="imranfish.xmlextensions">
								<modId>Daria40K.MightyPersonaBondForgePatch</modId>
								<key>Daria40K_MightyPersonaBondForgePatch_AltherianExportElementalWeaponry</key>
								<defaultValue>true</defaultValue>

								<caseTrue>
									<Operation Class="XmlExtensions.PatchOperationAdd">
										<xpath>Defs</xpath>
										<value>
											<!-- Make_HALCYZOM_Cryoblaster_Bond -->
											<RecipeDef ParentName="Make_HALCYZOM_Cryoblaster_Bond">
												<defName>Make_HALCYZOM_Cryoblaster_Bond</defName>
											</RecipeDef>

											<!-- Make_HALCYZOM_Plasmabolter_Bond -->
											<RecipeDef ParentName="Make_HALCYZOM_Plasmabolter_Bond">
												<defName>Make_HALCYZOM_Plasmabolter_Bond</defName>
											</RecipeDef>

											<!-- Make_HALCYZOM_Homicide_Applicator_Bond -->
											<RecipeDef ParentName="Make_HALCYZOM_Homicide_Applicator_Bond">
												<defName>Make_HALCYZOM_Homicide_Applicator_Bond</defName>
											</RecipeDef>

											<!-- Make_HALCYZOM_Problem_Dissolver_Bond -->
											<RecipeDef ParentName="Make_HALCYZOM_Problem_Dissolver_Bond">
												<defName>Make_HALCYZOM_Problem_Dissolver_Bond</defName>
											</RecipeDef>

											<!-- Make_HALCYZOM_Sonic_Shredder_Bond -->
											<RecipeDef ParentName="Make_HALCYZOM_Sonic_Shredder_Bond">
												<defName>Make_HALCYZOM_Sonic_Shredder_Bond</defName>
											</RecipeDef>
										</value>
									</Operation>
								</caseTrue>
							</li>
						</operations>
					</match>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>
