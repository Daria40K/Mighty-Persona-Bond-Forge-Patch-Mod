<?xml version="1.0" encoding="utf-8"?>
<!--
    ===== Altherian Export - Elemental Weaponry =====
-->
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Altherian Export - Elemental Weaponry</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>Defs</xpath>
					<value>
						<RecipeDef ParentName="MPBFPM_RecipeDefBase" Name="Make_HALCYZOM_Cryoblaster_Bond" Abstract="True">
							<label>bond HZ Cryoblaster</label>
							<description>Bond an HZ Cryoblaster.</description>
							<jobString>Bonding a HZ Cryoblaster.</jobString>
							<researchPrerequisite>Fabrication</researchPrerequisite>
							<ingredients>
								<li>
									<filter>
										<thingDefs>
											<li>HALCYZOM_Cryoblaster</li>
										</thingDefs>
									</filter>
									<count>1</count>
								</li>
							</ingredients>
							<fixedIngredientFilter>
								<thingDefs>
									<li>HALCYZOM_Cryoblaster</li>
								</thingDefs>
							</fixedIngredientFilter>
							<products>
								<HALCYZOM_Cryoblaster_Bond>1</HALCYZOM_Cryoblaster_Bond>
							</products>
						</RecipeDef>

						<RecipeDef ParentName="MPBFPM_RecipeDefBase" Name="Make_HALCYZOM_Plasmabolter_Bond" Abstract="True">
							<label>bond HZ Plasmabolter</label>
							<description>Bond an HZ Plasmabolter.</description>
							<jobString>Bonding a HZ Plasmabolter.</jobString>
							<researchPrerequisite>Fabrication</researchPrerequisite>
							<ingredients>
								<li>
									<filter>
										<thingDefs>
											<li>HALCYZOM_Plasmabolter</li>
										</thingDefs>
									</filter>
									<count>1</count>
								</li>
							</ingredients>
							<fixedIngredientFilter>
								<thingDefs>
									<li>HALCYZOM_Plasmabolter</li>
								</thingDefs>
							</fixedIngredientFilter>
							<products>
								<HALCYZOM_Plasmabolter_Bond>1</HALCYZOM_Plasmabolter_Bond>
							</products>
						</RecipeDef>

						<RecipeDef ParentName="MPBFPM_RecipeDefBase" Name="Make_HALCYZOM_Homicide_Applicator_Bond" Abstract="True">
							<label>bond HZ Homicide Applicator</label>
							<description>Bond an HZ Homicide Applicator.</description>
							<jobString>Bonding a HZ Homicide Applicator.</jobString>
							<researchPrerequisite>Fabrication</researchPrerequisite>
							<ingredients>
								<li>
									<filter>
										<thingDefs>
											<li>HALCYZOM_Homicide_Applicator</li>
										</thingDefs>
									</filter>
									<count>1</count>
								</li>
							</ingredients>
							<fixedIngredientFilter>
								<thingDefs>
									<li>HALCYZOM_Homicide_Applicator</li>
								</thingDefs>
							</fixedIngredientFilter>
							<products>
								<HALCYZOM_Homicide_Applicator_Bond>1</HALCYZOM_Homicide_Applicator_Bond>
							</products>
						</RecipeDef>

						<RecipeDef ParentName="MPBFPM_RecipeDefBase" Name="Make_HALCYZOM_Problem_Dissolver_Bond" Abstract="True">
							<label>bond HZ Problem Dissolver</label>
							<description>Bond an HZ Problem Dissolver.</description>
							<jobString>Bonding a HZ Problem Dissolver.</jobString>
							<researchPrerequisite>Fabrication</researchPrerequisite>
							<ingredients>
								<li>
									<filter>
										<thingDefs>
											<li>HALCYZOM_Problem_Dissolver</li>
										</thingDefs>
									</filter>
									<count>1</count>
								</li>
							</ingredients>
							<fixedIngredientFilter>
								<thingDefs>
									<li>HALCYZOM_Problem_Dissolver</li>
								</thingDefs>
							</fixedIngredientFilter>
							<products>
								<HALCYZOM_Problem_Dissolver_Bond>1</HALCYZOM_Problem_Dissolver_Bond>
							</products>
						</RecipeDef>

						<RecipeDef ParentName="MPBFPM_RecipeDefBase" Name="Make_HALCYZOM_Sonic_Shredder_Bond" Abstract="True">
							<label>bond HZ Sonic Shredder</label>
							<description>Bond an HZ Sonic Shredder.</description>
							<jobString>Bonding a HZ Sonic Shredder.</jobString>
							<researchPrerequisite>Fabrication</researchPrerequisite>
							<ingredients>
								<li>
									<filter>
										<thingDefs>
											<li>HALCYZOM_Sonic_Shredder</li>
										</thingDefs>
									</filter>
