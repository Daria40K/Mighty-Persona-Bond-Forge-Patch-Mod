<?xml version="1.0" encoding="utf-8"?>
<!--
    ===== QLU-X祝融 =====

    == Range
    QLUX_Pulse_Projector_Bond = persona QLUX Pulse Projector
    QBZ_fivenine_Bond = persona QBZ 59 Assault Rifle
    QBU_sixsix_Bond = persona QBU 66 Sniper Rifle
    QBZoneooneXuanMing_Bond = persona QBZ-101 XuanMing Electro-magnetic Rifle
    PrototypeXiHe_Bond = persona Prototype XiHe flameblaster
-->
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>QLU-X祝融</li>
        </mods>

        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>Defs</xpath>
                    <value>
                        <!-- QLUX_Pulse_Projector_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_QLUX_Pulse_Projector_Bond</defName>
                            <label>bond QLUX Pulse Projector</label>
                            <description>Bond an QLUX Pulse Projector.</description>
                            <jobString>Bonding a QLUX Pulse Projector.</jobString>
                            <researchPrerequisite>ChargedShot</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>QLUX_Pulse_Projector</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>QLUX_Pulse_Projector</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <QLUX_Pulse_Projector_Bond>1</QLUX_Pulse_Projector_Bond>
                            </products>
                        </RecipeDef>

                        <!-- QBZ_fivenine_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_QBZ_fivenine_Bond</defName>
                            <label>bond QBZ 59 Assault Rifle</label>
                            <description>Bond an QBZ 59 Assault Rifle.</description>
                            <jobString>Bonding a QBZ 59 Assault Rifle.</jobString>
                            <researchPrerequisite>ChargedShot</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>QBZ_fivenine</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>QBZ_fivenine</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <QBZ_fivenine_Bond>1</QBZ_fivenine_Bond>
                            </products>
                        </RecipeDef>

                        <!-- QBU_sixsix_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_QBU_sixsix_Bond</defName>
                            <label>bond QBU 66 Sniper Rifle</label>
                            <description>Bond an QBU 66 Sniper Rifle.</description>
                            <jobString>Bonding a QBU 66 Sniper Rifle.</jobString>
                            <researchPrerequisite>ChargedShot</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>QBU_sixsix</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>QBU_sixsix</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <QBU_sixsix_Bond>1</QBU_sixsix_Bond>
                            </products>
                        </RecipeDef>

                        <!-- QBZoneooneXuanMing_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_QBZoneooneXuanMing_Bond</defName>
                            <label>bond QBZ-101 XuanMing Electro-magnetic Rifle</label>
                            <description>Bond an QBZ-101 XuanMing Electro-magnetic Rifle.</description>
                            <jobString>Bonding a QBZ-101 XuanMing Electro-magnetic Rifle.</jobString>
                            <researchPrerequisite>ChargedShot</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>QBZoneooneXuanMing</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>QBZoneooneXuanMing</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <QBZoneooneXuanMing_Bond>1</QBZoneooneXuanMing_Bond>
                            </products>
                        </RecipeDef>

                        <!-- PrototypeXiHe_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_PrototypeXiHe_Bond</defName>
                            <label>bond Prototype XiHe flameblaster</label>
                            <description>Bond an Prototype XiHe flameblaster.</description>
                            <jobString>Bonding a Prototype XiHe flameblaster.</jobString>
                            <researchPrerequisite>ChargedShot</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>PrototypeXiHe</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>PrototypeXiHe</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <PrototypeXiHe_Bond>1</PrototypeXiHe_Bond>
                            </products>
                        </RecipeDef>
                    </value>
                </li>

                <li Class="XmlExtensions.OptionalPatch" MayRequire="imranfish.xmlextensions">
                    <modId>Daria40K.MightyPersonaBondForgePatch</modId>
                    <key>Daria40K_MightyPersonaBondForgePatch_QLU</key>
                    <defaultValue>true</defaultValue>
                    <caseFalse>
                        <!-- QLUX_Pulse_Projector_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_QLUX_Pulse_Projector_Bond"]</xpath>
                        </Operation>

                        <!-- QBZ_fivenine_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_QBZ_fivenine_Bond"]</xpath>
                        </Operation>

                        <!-- QBU_sixsix_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_QBU_sixsix_Bond"]</xpath>
                        </Operation>

                        <!-- QBZoneooneXuanMing_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_QBZoneooneXuanMing_Bond"]</xpath>
                        </Operation>

                        <!-- PrototypeXiHe_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_PrototypeXiHe_Bond"]</xpath>
                        </Operation>
                    </caseFalse>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>