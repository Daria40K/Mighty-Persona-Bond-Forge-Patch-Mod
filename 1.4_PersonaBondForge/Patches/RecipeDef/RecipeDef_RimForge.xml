                <li Class="XmlExtensions.OptionalPatch" MayRequire="imranfish.xmlextensions">
                    <modId>Daria40K.MightyPersonaBondForgePatch</modId>
                    <key>Daria40K_MightyPersonaBondForgePatch_RimForge</key>
                    <defaultValue>true</defaultValue>
                    <caseFalse>
                        <!-- RF_CursedKhopesh -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_RF_CursedKhopesh_Bond"]</xpath>
                        </Operation>
                        <!-- RF_GaeBulg -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_RF_GaeBulg_Bond"]</xpath>
                        </Operation>
                        <!-- RF_Khopesh -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_RF_Khopesh_Bond"]</xpath>
                        </Operation>
                        <!-- RF_StablePistol -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_RF_StablePistol_Bond"]</xpath>
                        </Operation>
                        <!-- RF_StableRifle -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_RF_StableRifle_Bond"]</xpath>
