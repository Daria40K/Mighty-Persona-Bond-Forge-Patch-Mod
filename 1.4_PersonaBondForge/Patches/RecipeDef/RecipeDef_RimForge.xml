                            <label>bond cursed khopesh</label>
                            <description>Bond an cursed khopesh.</description>
                            <jobString>Bonding a cursed khopesh.</jobString>
                            <researchPrerequisite>Bound_Research</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>RF_CursedKhopesh</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>RF_CursedKhopesh</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <RF_CursedKhopesh_Bond>1</RF_CursedKhopesh_Bond>
                            </products>
                        </RecipeDef>

