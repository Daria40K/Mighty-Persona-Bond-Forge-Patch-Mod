                    <value>
                        <!-- HC_SeventhSeraphOfficerRevolver_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_HC_SeventhSeraphOfficerRevolver_Bond</defName>
                            <label>bond Seventh Seraph Officer Revolver</label>
                            <description>Bond an Seventh Seraph Officer Revolver.</description>
                            <jobString>Bonding a Seventh Seraph Officer Revolver.</jobString>
                            <researchPrerequisite>BlowbackOperation</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>HC_SeventhSeraphOfficerRevolver</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>HC_SeventhSeraphOfficerRevolver</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <HC_SeventhSeraphOfficerRevolver_Bond>1</HC_SeventhSeraphOfficerRevolver_Bond>
                            </products>
                        </RecipeDef>

                        <!-- SG_SeventhSeraphCQC_Bond -->
