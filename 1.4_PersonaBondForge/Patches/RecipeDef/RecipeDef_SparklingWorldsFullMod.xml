<?xml version="1.0" encoding="utf-8"?>
<!--
    ===== Sparkling Worlds - Full Mod =====
-->
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Sparkling Worlds - Full Mod</li>
            <li>Sparkling Worlds Addon - Weapons - Standalone Addon</li>
        </mods>

        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs</xpath>
                    <value>
                        <!-- Gun_GaussrifleSW_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_Gun_GaussrifleSW_Bond</defName>
                            <label>bond gauss rifle</label>
                            <description>Bond an gauss rifle.</description>
                            <jobString>Bonding a gauss rifle.</jobString>
                            <researchPrerequisite>RailgunSW</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>Gun_GaussrifleSW</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>Gun_GaussrifleSW</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <Gun_GaussrifleSW_Bond>1</Gun_GaussrifleSW_Bond>
                            </products>
                        </RecipeDef>

                        <!-- Gun_RailgunSW_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_Gun_RailgunSW_Bond</defName>
                            <label>bond gauss lance</label>
                            <description>Bond an gauss lance.</description>
                            <jobString>Bonding a gauss lance.</jobString>
                            <researchPrerequisite>RailgunSW</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>Gun_RailgunSW</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>Gun_RailgunSW</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <Gun_RailgunSW_Bond>1</Gun_RailgunSW_Bond>
                            </products>
                        </RecipeDef>

                        <!-- Gun_BulletstormSW_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_Gun_BulletstormSW_Bond</defName>
                            <label>bond bulletstorm</label>
                            <description>Bond an bulletstorm.</description>
                            <jobString>Bonding a bulletstorm.</jobString>
                            <researchPrerequisite>RailgunSW</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>Gun_BulletstormSW</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>Gun_BulletstormSW</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <Gun_BulletstormSW_Bond>1</Gun_BulletstormSW_Bond>
                            </products>
                        </RecipeDef>

                        <!-- Gun_PlasmaGunSW_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_Gun_PlasmaGunSW_Bond</defName>
                            <label>bond plasma gun</label>
                            <description>Bond an plasma gun.</description>
                            <jobString>Bonding a plasma gun.</jobString>
                            <researchPrerequisite>PlasmaGunnerySW</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>Gun_PlasmaGunSW</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>Gun_PlasmaGunSW</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <Gun_PlasmaGunSW_Bond>1</Gun_PlasmaGunSW_Bond>
                            </products>
                        </RecipeDef>
                    </value>
                </li>

                <li Class="XmlExtensions.OptionalPatch" MayRequire="imranfish.xmlextensions">
                    <modId>Daria40K.MightyPersonaBondForgePatch</modId>
                    <key>Daria40K_MightyPersonaBondForgePatch_SparklingWorldsFullMod</key>
                    <defaultValue>true</defaultValue>
                    <caseFalse>
                        <!-- Gun_GaussrifleSW -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_Gun_GaussrifleSW"]</xpath>
                        </Operation>

                        <!-- Gun_RailgunSW -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_Gun_RailgunSW"]</xpath>
                        </Operation>

                        <!-- Gun_BulletstormSW -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_Gun_BulletstormSW"]</xpath>
                        </Operation>

                        <!-- Gun_PlasmaGunSW -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_Gun_PlasmaGunSW"]</xpath>
                        </Operation>
                    </caseFalse>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>