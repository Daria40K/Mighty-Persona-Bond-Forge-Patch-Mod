<?xml version="1.0" encoding="utf-8" ?>
<!--
    ===== The Cosmic Odyssey - Urban Combat =====

    == Range
    ALE_Handcannon_Bond = persona Gauss Hand Cannon "Peacemaker"
    ALE_Quadshotgun_Bond = persona Quad-barrel gauss shotgun "Street Sweeper"
    ALE_CompactSMG_Bond = persona Gauss Compact SMG "Warmonger"
    ALE_microgun_Bond = persona Gauss Gatling Carbine "Rainstorm"
    ALE_moltenshotgun_Bond = persona Molten shotgun "Firestarter"
    ALE_Spear_Bond = persona Hyperdense Spear "Waveslasher"
-->
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>The Cosmic Odyssey - Urban Combat</li>
        </mods>

        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs</xpath>
                    <value>
                        <!-- ===== Range ===== -->
                        <!-- ALE_Handcannon_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_ALE_Handcannon_Bond</defName>
                            <label>bond Gauss Hand Cannon "Peacemaker"</label>
                            <description>Bond an Gauss Hand Cannon "Peacemaker".</description>
                            <jobString>Bonding a Gauss Hand Cannon "Peacemaker".</jobString>
                            <researchPrerequisite>ALE_CrimsonTrio</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>ALE_Handcannon</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>ALE_Handcannon</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <ALE_Handcannon_Bond>1</ALE_Handcannon_Bond>
                            </products>
                        </RecipeDef>

                        <!-- ALE_Quadshotgun_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_ALE_Quadshotgun_Bond</defName>
                            <label>bond Quad-barrel gauss shotgun "Street Sweeper"</label>
                            <description>Bond an Quad-barrel gauss shotgun "Street Sweeper".</description>
                            <jobString>Bonding a Quad-barrel gauss shotgun "Street Sweeper".</jobString>
                            <researchPrerequisite>ALE_CQB</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>ALE_Quadshotgun</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>ALE_Quadshotgun</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <ALE_Quadshotgun_Bond>1</ALE_Quadshotgun_Bond>
                            </products>
                        </RecipeDef>

                        <!-- ALE_CompactSMG_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_ALE_CompactSMG_Bond</defName>
                            <label>bond Gauss Compact SMG "Warmonger"</label>
                            <description>Bond an Gauss Compact SMG "Warmonger".</description>
                            <jobString>Bonding a Gauss Compact SMG "Warmonger".</jobString>
                            <researchPrerequisite>ALE_CrimsonTrio</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>ALE_CompactSMG</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>ALE_CompactSMG</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <ALE_CompactSMG_Bond>1</ALE_CompactSMG_Bond>
                            </products>
                        </RecipeDef>

                        <!-- ALE_microgun_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_ALE_microgun_Bond</defName>
                            <label>bond Gauss Gatling Carbine "Rainstorm"</label>
                            <description>Bond an Gauss Gatling Carbine "Rainstorm".</description>
                            <jobString>Bonding a Gauss Gatling Carbine "Rainstorm".</jobString>
                            <researchPrerequisite>ALE_CQB</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>ALE_microgun</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>ALE_microgun</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <ALE_microgun_Bond>1</ALE_microgun_Bond>
                            </products>
                        </RecipeDef>

                        <!-- ALE_moltenshotgun_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_ALE_moltenshotgun_Bond</defName>
                            <label>bond Molten shotgun "Firestarter"</label>
                            <description>Bond an Molten shotgun "Firestarter".</description>
                            <jobString>Bonding a Molten shotgun "Firestarter".</jobString>
                            <researchPrerequisite>ALE_MoltenShotgun</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>ALE_moltenshotgun</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>ALE_moltenshotgun</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <ALE_moltenshotgun_Bond>1</ALE_moltenshotgun_Bond>
                            </products>
                        </RecipeDef>

                        <!-- ALE_Spear_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_ALE_Spear_Bond</defName>
                            <label>bond Hyperdense Spear "Waveslasher"</label>
                            <description>Bond an Hyperdense Spear "Waveslasher".</description>
                            <jobString>Bonding a Hyperdense Spear "Waveslasher".</jobString>
                            <researchPrerequisite>ALE_Hyperdense</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>ALE_Spear</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>ALE_Spear</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <ALE_Spear_Bond>1</ALE_Spear_Bond>
                            </products>
                        </RecipeDef>
                    </value>
                </li>

                <li Class="XmlExtensions.OptionalPatch" MayRequire="imranfish.xmlextensions">
                    <modId>Daria40K.MightyPersonaBondForgePatch</modId>
                    <key>Daria40K_MightyPersonaBondForgePatch_TheCosmicOdysseyUrbanCombat</key>
                    <defaultValue>true</defaultValue>
                    <caseFalse>
                        <!-- ALE_Handcannon_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_ALE_Handcannon_Bond"]</xpath>
                        </Operation>

                        <!-- ALE_Quadshotgun_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_ALE_Quadshotgun_Bond"]</xpath>
                        </Operation>

                        <!-- ALE_CompactSMG_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_ALE_CompactSMG_Bond"]</xpath>
                        </Operation>

                        <!-- ALE_microgun_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_ALE_microgun_Bond"]</xpath>
                        </Operation>

                        <!-- ALE_moltenshotgun_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_ALE_moltenshotgun_Bond"]</xpath>
                        </Operation>

                        <!-- ALE_Spear_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_ALE_Spear_Bond"]</xpath>
                        </Operation>
                    </caseFalse>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>