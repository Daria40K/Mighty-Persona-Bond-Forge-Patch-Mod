                            <description>Bond an explosive bolt rifle.</description>
                            <jobString>Bonding a explosive bolt rifle.</jobString>
                            <researchPrerequisite>Bound_Research</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>VSWEB_Gun_ExplosiveBoltRifle</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>VSWEB_Gun_ExplosiveBoltRifle</li>
