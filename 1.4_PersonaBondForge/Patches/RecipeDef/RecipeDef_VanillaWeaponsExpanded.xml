                <li Class="XmlExtensions.OptionalPatch" MayRequire="imranfish.xmlextensions">
                    <modId>Daria40K.MightyPersonaBondForgePatch</modId>
                    <key>Daria40K_MightyPersonaBondForgePatch_VanillaWeaponsExpanded</key>
                    <defaultValue>true</defaultValue>
                    <caseFalse>
                        <!-- VWE_Gun_BondChargePistol -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_PBF_ThingDef_Weapon_VWE_Gun_ChargePistol"]</xpath>
                        </Operation>

                        <!-- VWE_Gun_BondChargeShotgun -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_PBF_ThingDef_Weapon_VWE_Gun_ChargeShotgun"]</xpath>
