<?xml version="1.0" encoding="utf-8"?>
<!--
    ===== Vanilla XCOM Laser Weapons =====

    == Range
    XCOM_Gun_LaserRifle_Bond = persona laser rifle
    XCOM_Gun_LaserSniperRifle_Bond = persona laser sniper rifle
    XCOM_Gun_LaserShotgun_Bond = persona scatter laser
    XCOM_Gun_LaserCannon_Bond = persona heavy laser
    XCOM_Gun_LaserPistol_Bond = persona laser pistol
    XCOM_Gun_LaserRailgun_Bond = persona railgun
-->
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla XCOM Laser Weapons</li>
        </mods>

        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs</xpath>
                    <value>
                        <!-- XCOM_Gun_LaserRifle_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_XCOM_Gun_LaserRifle_Bond</defName>
                            <label>bond laser rifle</label>
                            <description>Bond an laser rifle.</description>
                            <jobString>Bonding a laser rifle.</jobString>
                            <researchPrerequisite>XCOM_LaserWeapons</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>XCOM_Gun_LaserRifle</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>XCOM_Gun_LaserRifle</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <XCOM_Gun_LaserRifle_Bond>1</XCOM_Gun_LaserRifle_Bond>
                            </products>
                        </RecipeDef>

                        <!-- XCOM_Gun_LaserSniperRifle_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_XCOM_Gun_LaserSniperRifle_Bond</defName>
                            <label>bond laser sniper rifle</label>
                            <description>Bond an laser sniper rifle.</description>
                            <jobString>Bonding a laser sniper rifle.</jobString>
                            <researchPrerequisite>XCOM_LaserWeapons</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>XCOM_Gun_LaserSniperRifle</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>XCOM_Gun_LaserSniperRifle</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <XCOM_Gun_LaserSniperRifle_Bond>1</XCOM_Gun_LaserSniperRifle_Bond>
                            </products>
                        </RecipeDef>

                        <!-- XCOM_Gun_LaserShotgun_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_XCOM_Gun_LaserShotgun_Bond</defName>
                            <label>bond scatter laser</label>
                            <description>Bond an scatter laser.</description>
                            <jobString>Bonding a scatter laser.</jobString>
                            <researchPrerequisite>XCOM_LaserWeapons</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>XCOM_Gun_LaserShotgun</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>XCOM_Gun_LaserShotgun</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <XCOM_Gun_LaserShotgun_Bond>1</XCOM_Gun_LaserShotgun_Bond>
                            </products>
                        </RecipeDef>

                        <!-- XCOM_Gun_LaserCannon_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_XCOM_Gun_LaserCannon_Bond</defName>
                            <label>bond heavy laser</label>
                            <description>Bond an heavy laser.</description>
                            <jobString>Bonding a heavy laser.</jobString>
                            <researchPrerequisite>XCOM_LaserWeapons</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>XCOM_Gun_LaserCannon</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>XCOM_Gun_LaserCannon</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <XCOM_Gun_LaserCannon_Bond>1</XCOM_Gun_LaserCannon_Bond>
                            </products>
                        </RecipeDef>

                        <!-- XCOM_Gun_LaserPistol_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_XCOM_Gun_LaserPistol_Bond</defName>
                            <label>bond laser pistol</label>
                            <description>Bond an laser pistol.</description>
                            <jobString>Bonding a laser pistol.</jobString>
                            <researchPrerequisite>XCOM_LaserWeapons</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>XCOM_Gun_LaserPistol</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>XCOM_Gun_LaserPistol</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <XCOM_Gun_LaserPistol_Bond>1</XCOM_Gun_LaserPistol_Bond>
                            </products>
                        </RecipeDef>

                        <!-- XCOM_Gun_LaserRailgun_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_XCOM_Gun_LaserRailgun_Bond</defName>
                            <label>bond railgun</label>
                            <description>Bond an railgun.</description>
                            <jobString>Bonding a railgun.</jobString>
                            <researchPrerequisite>XCOM_LaserWeapons</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>XCOM_Gun_LaserRailgun</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>XCOM_Gun_LaserRailgun</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <XCOM_Gun_LaserRailgun_Bond>1</XCOM_Gun_LaserRailgun_Bond>
                            </products>
                        </RecipeDef>
                    </value>
                </li>

                <li Class="XmlExtensions.OptionalPatch" MayRequire="imranfish.xmlextensions">
                    <modId>Daria40K.MightyPersonaBondForgePatch</modId>
                    <key>Daria40K_MightyPersonaBondForgePatch_VanillaXCOMLaserWeapons</key>
                    <defaultValue>true</defaultValue>
                    <caseFalse>
                        <!-- XCOM_Gun_LaserRifle_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_XCOM_Gun_LaserRifle_Bond"]</xpath>
                        </Operation>

                        <!-- XCOM_Gun_LaserSniperRifle_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_XCOM_Gun_LaserSniperRifle_Bond"]</xpath>
                        </Operation>

                        <!-- XCOM_Gun_LaserShotgun_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_XCOM_Gun_LaserShotgun_Bond"]</xpath>
                        </Operation>

                        <!-- XCOM_Gun_LaserCannon_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_XCOM_Gun_LaserCannon_Bond"]</xpath>
                        </Operation>

                        <!-- XCOM_Gun_LaserPistol_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_XCOM_Gun_LaserPistol_Bond"]</xpath>
                        </Operation>

                        <!-- XCOM_Gun_LaserRailgun_Bond -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_XCOM_Gun_LaserRailgun_Bond"]</xpath>
                        </Operation>
                    </caseFalse>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>