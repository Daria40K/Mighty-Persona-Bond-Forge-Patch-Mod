                    <ThingDef ParentName="Bullet_LaserGeneric" Class="OgsLasers.LaserBeamDef" Name="Bullet_LaserBeam_Bond" Abstract="True">
                        <label>laser beam</label>
                        <graphicData>
                            <color>(190, 238, 255)</color> <!-- default bolt colour -->
                        </graphicData>
                        <textures> <!-- list of possible beam textures, can leave blank to use Vanilla's Orbital Laser texture -->
                            <!--<li>Lasbeam</li>-->
                        </textures>
                        <lifetime>50</lifetime> <!-- this is how many ticks the beam should be drawn for -->
                        <seam>0</seam> <!-- lasers are made up of 3 segments, this is how much they should overlap -->
                        <impulse>8</impulse> <!-- the solidity of the beam -->
                        <beamWidth>1.0</beamWidth> <!-- 0.5 the width of the laser beam - i suggest 0.5 for normal lasers and 0.125 for lightning -->
                        <projectile>
                            <damageDef>Bullet</damageDef>
                            <damageAmountBase>12</damageAmountBase>
                            <armorPenetrationBase>0.80</armorPenetrationBase>
