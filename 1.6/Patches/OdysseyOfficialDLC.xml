<?xml version="1.0" ?>
<!--
	===== Odyssey [Official DLC] =====
-->
<Patch>
	<Operation Class="XmlExtensions.FindMod">
		<mods>
			<li>ludeon.rimworld.odyssey</li>
		</mods>
		<packageId>true</packageId>
		<caseTrue>
			<Operation Class="XmlExtensions.PatchOperationAdd">
				<xpath>Defs</xpath>
				<value>
					<ThingDef ParentName="MPBFPM_BaseHumanMakeableGun" Name="Gun_BeamRepeater_Bond" Abstract="True">
						<label>persona beam repeater</label>
						<description>An ultratech weapon that emits gamma ray laser bursts in a rapid sequence. The tight gamma beams can pierce shields.\n\nThis weapon has an onboard persona that can bond to only a single person. The wielder and intelligent weapon can synchronize their reflexes and attack with frightening speed, accuracy, and creativity. Once bonded to a wielder, the weapon's persona will refuse to be wielded by anyone else.</description>
						<graphicData>
							<texPath>Things/Item/Equipment/WeaponRanged/BeamRepeater</texPath>
							<graphicClass>Graphic_Single</graphicClass>
						</graphicData>
						<soundInteract>Interact_Rifle</soundInteract>
						<weaponClasses>
							<li>RangedHeavy</li>
							<li>Ultratech</li>
						</weaponClasses>
						<statBases>
							<Mass>10</Mass>
							<AccuracyTouch>0.786</AccuracyTouch>
							<AccuracyShort>0.871</AccuracyShort>
							<AccuracyMedium>0.786</AccuracyMedium>
							<AccuracyLong>0.726</AccuracyLong>
							<RangedWeapon_Cooldown>2.167</RangedWeapon_Cooldown>
						</statBases>
						<techLevel>Spacer</techLevel>
						<weaponTags>
							<li>GunHeavy</li>
							<li>WeaponBeamRepeater</li>
						</weaponTags>
						<equippedStatOffsets>
							<MoveSpeed>-0.25</MoveSpeed>
						</equippedStatOffsets>
						<verbs>
							<li>
								<verbClass>Verb_Shoot</verbClass>
								<hasStandardCommand>true</hasStandardCommand>
								<defaultProjectile>Bullet_BeamRepeater_Bond</defaultProjectile>
								<warmupTime>4</warmupTime>
								<range>21.9</range>
								<burstShotCount>30</burstShotCount>
								<ticksBetweenBurstShots>10</ticksBetweenBurstShots>
								<soundCast>Shot_BeamRepeater</soundCast>
								<soundCastTail>GunTail_Medium</soundCastTail>
								<muzzleFlashScale>9</muzzleFlashScale>
								<aimingChargeMote>Mote_BeamRepeater_Charge</aimingChargeMote>
								<aimingChargeMoteOffset>1.07</aimingChargeMoteOffset>
							</li>
						</verbs>
						<tools>
							<li>
								<label>barrels</label>
								<capacities>
									<li>Blunt</li>
								</capacities>
								<power>12.555</power>
								<cooldownTime>2.21</cooldownTime>
							</li>
						</tools>
					</ThingDef>
					<ThingDef ParentName="MPBFPM_BaseGun" Name="Gun_Scattergun_Bond" Abstract="True">
						<label>persona scattergun</label>
						<description>A compact short-range shotgun designed to be mounted on a sentry drone.\n\nThis weapon has an onboard persona that can bond to only a single person. The wielder and intelligent weapon can synchronize their reflexes and attack with frightening speed, accuracy, and creativity. Once bonded to a wielder, the weapon's persona will refuse to be wielded by anyone else.</description>
						<techLevel>Spacer</techLevel>
						<graphicData>
							<texPath>Things/Item/Equipment/WeaponRanged/SentryScattergun</texPath>
							<graphicClass>Graphic_Single</graphicClass>
							<drawSize>0.85</drawSize>
						</graphicData>
						<tradeability>None</tradeability>
						<destroyOnDrop>true</destroyOnDrop>
						<relicChance>0</relicChance>
						<equippedDistanceOffset>-0.14</equippedDistanceOffset>
						<tools>
							<li>
								<label>barrel</label>
								<capacities>
									<li>Blunt</li>
									<li>Poke</li>
								</capacities>
								<power>9.75</power>
								<cooldownTime>2.21</cooldownTime>
							</li>
						</tools>
						<statBases>
							<MarketValue>1210.0</MarketValue>
							<Mass>1.5</Mass>
							<AccuracyTouch>0.968</AccuracyTouch>
							<AccuracyShort>1.053</AccuracyShort>
							<AccuracyMedium>0.871</AccuracyMedium>
							<AccuracyLong>0.726</AccuracyLong>
							<RangedWeapon_Cooldown>1.445</RangedWeapon_Cooldown>
						</statBases>
						<weaponClasses>
							<li>Ranged</li>
						</weaponClasses>
						<weaponTags>
							<li>SentryDroneGunShortRange</li>
						</weaponTags>
						<verbs>
							<li>
								<verbClass>Verb_Shoot</verbClass>
								<hasStandardCommand>true</hasStandardCommand>
								<defaultProjectile>Bullet_Scattergun_Bond</defaultProjectile>
								<warmupTime>0.55</warmupTime>
								<range>19.9</range>
								<burstShotCount>1</burstShotCount>
								<ticksBetweenBurstShots>10</ticksBetweenBurstShots>
								<soundCast>Shot_Shotgun</soundCast>
								<soundCastTail>GunTail_Heavy</soundCastTail>
								<muzzleFlashScale>6</muzzleFlashScale>
							</li>
						</verbs>
					</ThingDef>
					<ThingDef ParentName="MPBFPM_BaseBullet" Name="Bullet_BeamRepeater_Bond" Abstract="True">
						<label>beam repeater laser</label>
						<thingClass>Beam</thingClass>
						<graphicData>
							<texPath>Things/Projectile/Bullet_Small</texPath>
						</graphicData>
						<projectile>
							<damageDef>BeamBypassShields</damageDef>
							<damageAmountBase>7</damageAmountBase>
							<beamMoteDef>Mote_BeamRepeaterLaser</beamMoteDef>
							<beamStartOffset>0.5</beamStartOffset>
							<armorPenetrationBase>0.5</armorPenetrationBase>
						</projectile>
					</ThingDef>
					<ThingDef ParentName="MPBFPM_Bullet" Name="Bullet_Scattergun_Bond" Abstract="True">
						<label>scattergun blast</label>
						<graphicData>
							<texPath>Things/Projectile/Bullet_MiniShotgun</texPath>
						</graphicData>
						<projectile>
							<damageDef>Bullet</damageDef>
							<damageAmountBase>17</damageAmountBase>
							<stoppingPower>2.5</stoppingPower>
							<armorPenetrationBase>0.15</armorPenetrationBase>
							<speed>55</speed>
						</projectile>
					</ThingDef>
				</value>
			</Operation>
			<Operation Class="XmlExtensions.OptionalPatch">
				<modId>Daria40K.MightyPersonaBondForgePatch</modId>
				<key>Daria40K_MightyPersonaBondForgePatch_OdysseyOfficialDLC</key>
				<defaultValue>true</defaultValue>
				<caseTrue>
					<Operation Class="XmlExtensions.PatchOperationAdd">
						<xpath>Defs</xpath>
						<value>
							<ThingDef ParentName="Gun_BeamRepeater_Bond">
								<defName>Gun_BeamRepeater_Bond</defName>
							</ThingDef>
							<ThingDef ParentName="Gun_Scattergun_Bond">
								<defName>Gun_Scattergun_Bond</defName>
							</ThingDef>
							<ThingDef ParentName="Bullet_BeamRepeater_Bond">
								<defName>Bullet_BeamRepeater_Bond</defName>
							</ThingDef>
							<ThingDef ParentName="Bullet_Scattergun_Bond">
								<defName>Bullet_Scattergun_Bond</defName>
							</ThingDef>
						</value>
					</Operation>
				</caseTrue>
			</Operation>
		</caseTrue>
	</Operation>
</Patch>