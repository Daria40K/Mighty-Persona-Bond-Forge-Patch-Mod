<?xml version="1.0" encoding="utf-8"?>
<!--
		Altherian Export - Elemental Weaponry

		HALCYZOM_Cryoblaster_Bond = persona HZ Cryoblaster
		HALCYZOM_Plasmabolter_Bond = persona HZ Plasmabolter
		HALCYZOM_Homicide_Applicator_Bond = persona HZ Homicide Applicator
		HALCYZOM_Problem_Dissolver_Bond = persona HZ Problem Dissolver
		HALCYZOM_Sonic_Shredder_Bond = persona HZ Sonic Shredder
	-->
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Altherian Export - Elemental Weaponry</li>
		</mods>

		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>Defs</xpath>
					<value>
						<!-- HALCYZOM_Cryoblaster_Bond -->
						<RecipeDef ParentName="MPBFPM_RecipeDefBase">
							<defName>Make_HALCYZOM_Cryoblaster_Bond</defName>
							<label>bond HZ Cryoblaster</label>
							<description>Bond an HZ Cryoblaster.</description>
							<jobString>Bonding a HZ Cryoblaster.</jobString>
														<effectWorking>Cook</effectWorking>
							<researchPrerequisite>Fabrication</researchPrerequisite>
							<ingredients>
								<li>
									<filter>
										<thingDefs>
											<li>HALCYZOM_Cryoblaster</li>
										</thingDefs>
									</filter>
									<count>1</count>
								</li>
							</ingredients>
							<fixedIngredientFilter>
								<thingDefs>
									<li>HALCYZOM_Cryoblaster</li>
								</thingDefs>
							</fixedIngredientFilter>
							<products>
								<HALCYZOM_Cryoblaster_Bond>1</HALCYZOM_Cryoblaster_Bond>
							</products>
						</RecipeDef>

						<!-- HALCYZOM_Plasmabolter_Bond -->
						<RecipeDef ParentName="MPBFPM_RecipeDefBase">
							<defName>Make_HALCYZOM_Plasmabolter_Bond</defName>
							<label>bond HZ Plasmabolter</label>
							<description>Bond an HZ Plasmabolter.</description>
							<jobString>Bonding a HZ Plasmabolter.</jobString>
														<effectWorking>Cook</effectWorking>
							<researchPrerequisite>Fabrication</researchPrerequisite>
							<ingredients>
								<li>
									<filter>
										<thingDefs>
											<li>HALCYZOM_Plasmabolter</li>
										</thingDefs>
									</filter>
									<count>1</count>
								</li>
							</ingredients>
							<fixedIngredientFilter>
								<thingDefs>
									<li>HALCYZOM_Plasmabolter</li>
								</thingDefs>
							</fixedIngredientFilter>
							<products>
								<HALCYZOM_Plasmabolter_Bond>1</HALCYZOM_Plasmabolter_Bond>
							</products>
						</RecipeDef>

						<!-- HALCYZOM_Homicide_Applicator_Bond -->
						<RecipeDef ParentName="MPBFPM_RecipeDefBase">
							<defName>Make_HALCYZOM_Homicide_Applicator_Bond</defName>
							<label>bond HZ Homicide Applicator</label>
							<description>Bond an HZ Homicide Applicator.</description>
							<jobString>Bonding a HZ Homicide Applicator.</jobString>
														<effectWorking>Cook</effectWorking>
							<researchPrerequisite>Fabrication</researchPrerequisite>
							<ingredients>
								<li>
									<filter>
										<thingDefs>
											<li>HALCYZOM_Homicide_Applicator</li>
										</thingDefs>
									</filter>
									<count>1</count>
								</li>
							</ingredients>
							<fixedIngredientFilter>
								<thingDefs>
									<li>HALCYZOM_Homicide_Applicator</li>
								</thingDefs>
							</fixedIngredientFilter>
							<products>
								<HALCYZOM_Homicide_Applicator_Bond>1</HALCYZOM_Homicide_Applicator_Bond>
							</products>
						</RecipeDef>

						<!-- HALCYZOM_Problem_Dissolver_Bond -->
						<RecipeDef ParentName="MPBFPM_RecipeDefBase">
							<defName>Make_HALCYZOM_Problem_Dissolver_Bond</defName>
							<label>bond HZ Problem Dissolver</label>
							<description>Bond an HZ Problem Dissolver.</description>
							<jobString>Bonding a HZ Problem Dissolver.</jobString>
														<effectWorking>Cook</effectWorking>
							<researchPrerequisite>Fabrication</researchPrerequisite>
							<ingredients>
								<li>
									<filter>
										<thingDefs>
											<li>HALCYZOM_Problem_Dissolver</li>
										</thingDefs>
									</filter>
									<count>1</count>
								</li>
							</ingredients>
							<fixedIngredientFilter>
								<thingDefs>
									<li>HALCYZOM_Problem_Dissolver</li>
								</thingDefs>
							</fixedIngredientFilter>
							<products>
								<HALCYZOM_Problem_Dissolver_Bond>1</HALCYZOM_Problem_Dissolver_Bond>
							</products>
						</RecipeDef>

						<!-- HALCYZOM_Sonic_Shredder_Bond -->
						<RecipeDef ParentName="MPBFPM_RecipeDefBase">
							<defName>Make_HALCYZOM_Sonic_Shredder_Bond</defName>
							<label>bond HZ Sonic Shredder</label>
							<description>Bond an HZ Sonic Shredder.</description>
							<jobString>Bonding a HZ Sonic Shredder.</jobString>
														<effectWorking>Cook</effectWorking>
							<researchPrerequisite>Fabrication</researchPrerequisite>
							<ingredients>
								<li>
									<filter>
										<thingDefs>
											<li>HALCYZOM_Sonic_Shredder</li>
										</thingDefs>
									</filter>
									<count>1</count>
								</li>
							</ingredients>
							<fixedIngredientFilter>
								<thingDefs>
									<li>HALCYZOM_Sonic_Shredder</li>
								</thingDefs>
							</fixedIngredientFilter>
							<products>
								<HALCYZOM_Sonic_Shredder_Bond>1</HALCYZOM_Sonic_Shredder_Bond>
							</products>
						</RecipeDef>
					</value>
				</li>

				<li Class="XmlExtensions.OptionalPatch" MayRequire="imranfish.xmlextensions">
					<modId>Daria40K.MightyPersonaBondForgePatch</modId>
					<key>Daria40K_MightyPersonaBondForgePatch_AltherianExportElementalWeaponry</key>
					<defaultValue>true</defaultValue>
					<caseFalse>
						<!-- HALCYZOM_Cryoblaster_Bond -->
						<Operation Class="XmlExtensions.PatchOperationRemove">
							<xpath>Defs/RecipeDef[defName="Make_HALCYZOM_Cryoblaster_Bond"]</xpath>
						</Operation>

						<!-- HALCYZOM_Plasmabolter_Bond -->
						<Operation Class="XmlExtensions.PatchOperationRemove">
							<xpath>Defs/RecipeDef[defName="Make_HALCYZOM_Plasmabolter_Bond"]</xpath>
						</Operation>

						<!-- HALCYZOM_Homicide_Applicator_Bond -->
						<Operation Class="XmlExtensions.PatchOperationRemove">
							<xpath>Defs/RecipeDef[defName="Make_HALCYZOM_Homicide_Applicator_Bond"]</xpath>
						</Operation>

						<!-- HALCYZOM_Problem_Dissolver_Bond -->
						<Operation Class="XmlExtensions.PatchOperationRemove">
							<xpath>Defs/RecipeDef[defName="Make_HALCYZOM_Problem_Dissolver_Bond"]</xpath>
						</Operation>

						<!-- HALCYZOM_Sonic_Shredder_Bond -->
						<Operation Class="XmlExtensions.PatchOperationRemove">
							<xpath>Defs/RecipeDef[defName="Make_HALCYZOM_Sonic_Shredder_Bond"]</xpath>
						</Operation>
					</caseFalse>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>