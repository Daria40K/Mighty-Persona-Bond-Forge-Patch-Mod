                                <filter>
                                    <thingDefs>
                                        <li>ALW_LaserBlaster</li>
                                    </thingDefs>
                                </filter>
                                <count>1</count>
                            </li>
                        </ingredients>
                        <fixedIngredientFilter>
                            <thingDefs>
                                <li>ALW_LaserBlaster</li>
                            </thingDefs>
                        </fixedIngredientFilter>
                        <products>
                            <ALW_LaserBlaster_Bond>1</ALW_LaserBlaster_Bond>
