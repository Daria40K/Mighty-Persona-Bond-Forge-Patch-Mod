                        </fixedIngredientFilter>
                        <products>
                            <Gs_Cerberus_rifle_Bond>1</Gs_Cerberus_rifle_Bond>
                        </products>
                    </RecipeDef>
                    <RecipeDef ParentName="MPBFPM_RecipeDefBase" Name="Make_Cerberus_Sniper_Rifle_Bond" Abstract="True">
                        <label>bond Cerberus sniper</label>
