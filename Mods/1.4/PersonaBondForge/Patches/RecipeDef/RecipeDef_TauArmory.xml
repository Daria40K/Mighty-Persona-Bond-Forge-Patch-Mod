                        <!-- Tau_Ion_Rifle_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_Tau_Ion_Rifle_Bond</defName>
                            <label>bond T'au Ion Rifle</label>
                            <description>Bond an T'au Ion Rifle.</description>
                            <jobString>Bonding a T'au Ion Rifle.</jobString>
                            <researchPrerequisite>Tau_Weapons</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>Tau_Ion_Rifle</li>
