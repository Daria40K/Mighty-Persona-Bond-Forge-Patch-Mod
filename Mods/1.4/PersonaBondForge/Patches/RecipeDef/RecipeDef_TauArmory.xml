                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>Tau_Ion_Rifle</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <Tau_Ion_Rifle_Bond>1</Tau_Ion_Rifle_Bond>
                            </products>
                        </RecipeDef>
                    </value>
                </li>

                <li Class="XmlExtensions.OptionalPatch" MayRequire="imranfish.xmlextensions">
                    <modId>Daria40K.MightyPersonaBondForgePatch</modId>
                    <key>Daria40K_MightyPersonaBondForgePatch_TauArmory</key>
                    <defaultValue>true</defaultValue>
                    <caseFalse>
                        <!-- Ethereal_Honor_Blade -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_Ethereal_Honor_Blade"]</xpath>
                        </Operation>
                        <!-- Neutron_Blaster -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_Neutron_Blaster"]</xpath>
                        </Operation>
                        <!-- Tau_Pulse_Carbine -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_Tau_Pulse_Carbine"]</xpath>
                        </Operation>
                        <!-- Kroot_Rifle -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_Kroot_Rifle"]</xpath>
                        </Operation>
                        <!-- Tau_Pulse_Rifle -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_Tau_Pulse_Rifle"]</xpath>
                        </Operation>
                        <!-- Tau_Rail_Rifle -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_Tau_Rail_Rifle"]</xpath>
                        </Operation>
                        <!-- Tau_Ion_Rifle -->
                        <Operation Class="XmlExtensions.PatchOperationRemove">
                            <xpath>Defs/RecipeDef[defName="Make_Tau_Ion_Rifle"]</xpath>
                        </Operation>
                    </caseFalse>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>