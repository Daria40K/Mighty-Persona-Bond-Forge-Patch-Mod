                            </fixedIngredientFilter>
                            <products>
                                <Kroot_Rifle_Bond>1</Kroot_Rifle_Bond>
                            </products>
                        </RecipeDef>


                        <!-- Tau_Pulse_Rifle_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_Tau_Pulse_Rifle_Bond</defName>
                            <label>bond T'au Pulse Rifle</label>
                            <description>Bond an T'au Pulse Rifle.</description>
                            <jobString>Bonding a T'au Pulse Rifle.</jobString>
                            <researchPrerequisite>ChargedShot</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>Tau_Pulse_Rifle</li>
