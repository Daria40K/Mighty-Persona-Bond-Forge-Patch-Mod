                            </products>
                        </RecipeDef>


                        <!-- Tau_Rail_Rifle_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_Tau_Rail_Rifle_Bond</defName>
                            <label>bond T'au Rail Rifle</label>
                            <description>Bond an T'au Rail Rifle.</description>
                            <jobString>Bonding a T'au Rail Rifle.</jobString>
                            <researchPrerequisite>Tau_Weapons</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>Tau_Rail_Rifle</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>Tau_Rail_Rifle</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <Tau_Rail_Rifle_Bond>1</Tau_Rail_Rifle_Bond>
                            </products>
