<?xml version="1.0" encoding="utf-8"?>
<!--
    ===== Tau Armory =====
-->
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Tau Armory</li>
        </mods>

        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>Defs</xpath>
                    <value>
                        <!-- Ethereal_Honor_Blade_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_Ethereal_Honor_Blade_Bond</defName>
                            <label>bond Ethereal Honor Blade</label>
                            <description>Bond an Ethereal Honor Blade.</description>
                            <jobString>Bonding a Ethereal Honor Blade.</jobString>
                            <researchPrerequisite>Tau_Weapons</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>Ethereal_Honor_Blade</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>Ethereal_Honor_Blade</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <Ethereal_Honor_Blade_Bond>1</Ethereal_Honor_Blade_Bond>
                            </products>
                        </RecipeDef>


                        <!-- Neutron_Blaster_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_Neutron_Blaster_Bond</defName>
                            <label>bond Neutron Blaster</label>
                            <description>Bond an Neutron Blaster.</description>
                            <jobString>Bonding a Neutron Blaster.</jobString>
                            <researchPrerequisite>Tau_Weapons</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>Neutron_Blaster</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>Neutron_Blaster</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <Neutron_Blaster_Bond>1</Neutron_Blaster_Bond>
                            </products>
                        </RecipeDef>


                        <!-- Tau_Pulse_Carbine_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_Tau_Pulse_Carbine_Bond</defName>
                            <label>bond Tau Pulse Carbine</label>
                            <description>Bond an Tau Pulse Carbine.</description>
                            <jobString>Bonding a Tau Pulse Carbine.</jobString>
                            <researchPrerequisite>Tau_Weapons</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>Tau_Pulse_Carbine</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>Tau_Pulse_Carbine</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <Tau_Pulse_Carbine_Bond>1</Tau_Pulse_Carbine_Bond>
                            </products>
                        </RecipeDef>


                        <!-- Kroot_Rifle_Bond -->
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase">
                            <defName>Make_Kroot_Rifle_Bond</defName>
                            <label>bond Kroot Rifle</label>
                            <description>Bond an Kroot Rifle.</description>
                            <jobString>Bonding a Kroot Rifle.</jobString>
                            <researchPrerequisite>Tau_Weapons</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>Kroot_Rifle</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
