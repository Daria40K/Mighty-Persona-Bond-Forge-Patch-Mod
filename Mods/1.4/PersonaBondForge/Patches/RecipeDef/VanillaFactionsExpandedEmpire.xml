<?xml version="1.0" encoding="utf-8"?>
<!--
    ===== Vanilla Factions Expanded - Empire =====
-->
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Factions Expanded - Empire</li>
        </mods>

        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>Defs</xpath>
                    <value>
                        <RecipeDef ParentName="MPBFPM_RecipeDefBase" Name="Make_VEE_Gun_Fletcher_Bond" Abstract="True">
                            <label>bond fletcher</label>
                            <description>Bond an fletcher.</description>
                            <jobString>Bonding a fletcher.</jobString>
                            <researchPrerequisite>Bound_Research</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>VEE_Gun_Fletcher</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>VEE_Gun_Fletcher</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <VEE_Gun_Fletcher_Bond>1</VEE_Gun_Fletcher_Bond>
                            </products>
                        </RecipeDef>

                        <RecipeDef ParentName="MPBFPM_RecipeDefBase" Name="Make_VFEE_Gun_ChargeThumper_Bond" Abstract="True">
                            <label>bond charge thumper</label>
                            <description>Bond an charge thumper.</description>
                            <jobString>Bonding a charge thumper.</jobString>
                            <researchPrerequisite>ChargedShot</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>VFEE_Gun_ChargeThumper</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>VFEE_Gun_ChargeThumper</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <VFEE_Gun_ChargeThumper_Bond>1</VFEE_Gun_ChargeThumper_Bond>
                            </products>
                        </RecipeDef>

                        <RecipeDef ParentName="MPBFPM_RecipeDefBase" Name="Make_VFEE_MeleeWeapon_ToxbladeBladelink" Abstract="True">
                            <label>bond toxblade</label>
                            <description>Bond an toxblade.</description>
                            <jobString>Bonding a toxblade.</jobString>
                            <researchPrerequisite>Bound_Research</researchPrerequisite>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>VFEE_MeleeWeapon_Toxblade</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>VFEE_MeleeWeapon_Toxblade</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <VFEE_MeleeWeapon_ToxbladeBladelink>1</VFEE_MeleeWeapon_ToxbladeBladelink>
                            </products>
                        </RecipeDef>
                    </value>
                </li>

                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>XML Extensions</li>
                    </mods>

                    <nomatch Class="PatchOperationAdd">
                        <xpath>Defs</xpath>
                        <value>
                            <!-- Make_VEE_Gun_Fletcher_Bond -->
                            <RecipeDef ParentName="Make_VEE_Gun_Fletcher_Bond">
                                <defName>Make_VEE_Gun_Fletcher_Bond</defName>
                            </RecipeDef>

                            <!-- Make_VFEE_Gun_ChargeThumper_Bond -->
                            <RecipeDef ParentName="Make_VFEE_Gun_ChargeThumper_Bond">
                                <defName>Make_VFEE_Gun_ChargeThumper_Bond</defName>
                            </RecipeDef>

                            <!-- Make_VFEE_MeleeWeapon_ToxbladeBladelink -->
                            <RecipeDef ParentName="Make_VFEE_MeleeWeapon_ToxbladeBladelink">
                                <defName>Make_VFEE_MeleeWeapon_ToxbladeBladelink</defName>
                            </RecipeDef>
                        </value>
                    </nomatch>

                    <match Class="PatchOperationSequence">
                        <operations>
                            <li Class="XmlExtensions.OptionalPatch" MayRequire="imranfish.xmlextensions">
                                <modId>Daria40K.MightyPersonaBondForgePatch</modId>
                                <key>Daria40K_MightyPersonaBondForgePatch_VanillaFactionsExpandedEmpire</key>
                                <defaultValue>true</defaultValue>

                                <caseTrue>
                                    <Operation Class="XmlExtensions.PatchOperationAdd">
                                        <xpath>Defs</xpath>
                                        <value>
                                            <!-- Make_VEE_Gun_Fletcher_Bond -->
                                            <RecipeDef ParentName="Make_VEE_Gun_Fletcher_Bond">
                                                <defName>Make_VEE_Gun_Fletcher_Bond</defName>
                                            </RecipeDef>

                                            <!-- Make_VFEE_Gun_ChargeThumper_Bond -->
                                            <RecipeDef ParentName="Make_VFEE_Gun_ChargeThumper_Bond">
                                                <defName>Make_VFEE_Gun_ChargeThumper_Bond</defName>
                                            </RecipeDef>

                                            <!-- Make_VFEE_MeleeWeapon_ToxbladeBladelink -->
                                            <RecipeDef ParentName="Make_VFEE_MeleeWeapon_ToxbladeBladelink">
                                                <defName>Make_VFEE_MeleeWeapon_ToxbladeBladelink</defName>
                                            </RecipeDef>
                                        </value>
                                    </Operation>
                                </caseTrue>
                            </li>
                        </operations>
                    </match>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>
