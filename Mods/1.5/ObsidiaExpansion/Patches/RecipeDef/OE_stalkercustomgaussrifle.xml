<?xml version="1.0" encoding="utf-8"?>
<!--
	===== S.T.A.L.K.E.R. - Custom Gauss Rifle =====
-->
<Patch>
	<Operation Class="XmlExtensions.FindMod">
		<mods>
			<li>harkon.stalker.gaussrifle</li>
		</mods>
		<packageId>true</packageId>

		<caseTrue>
			<Operation Class="XmlExtensions.PatchOperationAdd">
				<xpath>Defs</xpath>
				<value>
					<RecipeDef ParentName="MPBFPM_OERecipeDefBase" Name="Make_OE_HRK_STALKER_Gauss_Bond" Abstract="True">
						<label>bond Item 62 Mk.I</label>
						<description>Bond an Item 62 Mk.I.</description>
						<jobString>Bonding a Item 62 Mk.I.</jobString>
						<researchPrerequisites>
							<li>ChargedShot</li>
						</researchPrerequisites>
						<ingredients>
							<li>
								<filter>
									<thingDefs>
										<li>HRK_STALKER_Gauss</li>
									</thingDefs>
								</filter>
								<count>1</count>
							</li>
						</ingredients>
						<fixedIngredientFilter>
							<thingDefs>
								<li>HRK_STALKER_Gauss</li>
							</thingDefs>
						</fixedIngredientFilter>
						<products>
							<HRK_STALKER_Gauss_Bond>1</HRK_STALKER_Gauss_Bond>
						</products>
					</RecipeDef>
					<RecipeDef ParentName="MPBFPM_OEResetRecipeDefBase" Name="Make_OE_HRK_STALKER_Gauss_Bond_Reset" Abstract="True">
						<label>Reset Item 62 Mk.I</label>
						<description>Reset a Item 62 Mk.I.</description>
						<jobString>Resetting a Item 62 Mk.I.</jobString>
						<researchPrerequisites>
							<li>ChargedShot</li>
						</researchPrerequisites>
						<ingredients>
							<li>
								<filter>
									<thingDefs>
										<li>HRK_STALKER_Gauss_Bond</li>
									</thingDefs>
								</filter>
								<count>1</count>
							</li>
						</ingredients>
						<fixedIngredientFilter>
							<thingDefs>
								<li>HRK_STALKER_Gauss_Bond</li>
							</thingDefs>
						</fixedIngredientFilter>
						<products>
							<HRK_STALKER_Gauss_Bond>1</HRK_STALKER_Gauss_Bond>
						</products>
					</RecipeDef>
					<RecipeDef ParentName="MPBFPM_OERecipeDefBase" Name="Make_OE_HRK_STALKER_Gauss_Sniper_Bond" Abstract="True">
						<label>bond Item 62 Mk.II</label>
						<description>Bond an Item 62 Mk.II.</description>
						<jobString>Bonding a Item 62 Mk.II.</jobString>
						<researchPrerequisites>
							<li>ChargedShot</li>
						</researchPrerequisites>
						<ingredients>
							<li>
								<filter>
									<thingDefs>
										<li>HRK_STALKER_Gauss_Sniper</li>
									</thingDefs>
								</filter>
								<count>1</count>
							</li>
						</ingredients>
						<fixedIngredientFilter>
							<thingDefs>
								<li>HRK_STALKER_Gauss_Sniper</li>
							</thingDefs>
						</fixedIngredientFilter>
						<products>
							<HRK_STALKER_Gauss_Sniper_Bond>1</HRK_STALKER_Gauss_Sniper_Bond>
						</products>
					</RecipeDef>
					<RecipeDef ParentName="MPBFPM_OEResetRecipeDefBase" Name="Make_OE_HRK_STALKER_Gauss_Sniper_Bond_Reset" Abstract="True">
						<label>Reset Item 62 Mk.II</label>
						<description>Reset a Item 62 Mk.II.</description>
						<jobString>Resetting a Item 62 Mk.II.</jobString>
						<researchPrerequisites>
							<li>ChargedShot</li>
						</researchPrerequisites>
						<ingredients>
							<li>
								<filter>
									<thingDefs>
										<li>HRK_STALKER_Gauss_Sniper_Bond</li>
									</thingDefs>
								</filter>
								<count>1</count>
							</li>
						</ingredients>
						<fixedIngredientFilter>
							<thingDefs>
								<li>HRK_STALKER_Gauss_Sniper_Bond</li>
							</thingDefs>
						</fixedIngredientFilter>
						<products>
							<HRK_STALKER_Gauss_Sniper_Bond>1</HRK_STALKER_Gauss_Sniper_Bond>
						</products>
					</RecipeDef>
				</value>
			</Operation>

			<Operation Class="XmlExtensions.OptionalPatch">
				<modId>Daria40K.MightyPersonaBondForgePatch</modId>
				<key>Daria40K_MightyPersonaBondForgePatch_stalkercustomgaussrifle</key>
				<defaultValue>true</defaultValue>

				<caseTrue>
					<Operation Class="XmlExtensions.OptionalPatch">
						<modId>Daria40K.MightyPersonaBondForgePatch</modId>
						<key>Daria40K_MightyPersonaBondForgePatch_OE_stalkercustomgaussrifle</key>
						<defaultValue>true</defaultValue>

						<caseTrue>
							<Operation Class="XmlExtensions.OptionalPatch">
								<modId>Daria40K.MightyPersonaBondForgePatch</modId>
								<key>Daria40K_MightyPersonaBondForgePatch_DisableObsidiaExpansion</key>
								<defaultValue>false</defaultValue>

								<caseFalse>
									<Operation Class="XmlExtensions.PatchOperationAdd">
										<xpath>Defs</xpath>
										<value>
											<RecipeDef ParentName="Make_OE_HRK_STALKER_Gauss_Bond">
												<defName>Make_OE_HRK_STALKER_Gauss_Bond</defName>
											</RecipeDef>
											<RecipeDef ParentName="Make_OE_HRK_STALKER_Gauss_Bond_Reset">
												<defName>Make_OE_HRK_STALKER_Gauss_Bond_Reset</defName>
											</RecipeDef>
											<RecipeDef ParentName="Make_OE_HRK_STALKER_Gauss_Sniper_Bond">
												<defName>Make_OE_HRK_STALKER_Gauss_Sniper_Bond</defName>
											</RecipeDef>
											<RecipeDef ParentName="Make_OE_HRK_STALKER_Gauss_Sniper_Bond_Reset">
												<defName>Make_OE_HRK_STALKER_Gauss_Sniper_Bond_Reset</defName>
											</RecipeDef>
										</value>
									</Operation>
								</caseFalse>
							</Operation>
						</caseTrue>
					</Operation>
				</caseTrue>
			</Operation>
		</caseTrue>
	</Operation>
</Patch>