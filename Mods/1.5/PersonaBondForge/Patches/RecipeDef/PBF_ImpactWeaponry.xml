						</fixedIngredientFilter>
						<products>
							<DV_ImpactRifle_Bond>1</DV_ImpactRifle_Bond>
						</products>
					</RecipeDef>
					<RecipeDef MayRequire="smartkar.athenaframework" ParentName="MPBFPM_RecipeDefBase" Name="Make_DV_ImpactSlugger_Bond" Abstract="True">
						<label>bond impact slugger</label>
						<description>Bond an impact slugger.</description>
						<jobString>Bonding a impact slugger.</jobString>
						<researchPrerequisites>
							<li>DV_ImpactShot</li>
