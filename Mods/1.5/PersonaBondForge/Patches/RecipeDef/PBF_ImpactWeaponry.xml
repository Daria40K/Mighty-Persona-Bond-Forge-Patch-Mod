			<Operation Class="XmlExtensions.OptionalPatch">
				<modId>Daria40K.MightyPersonaBondForgePatch</modId>
				<key>Daria40K_MightyPersonaBondForgePatch_ImpactWeaponry</key>
				<defaultValue>true</defaultValue>

				<caseTrue>
					<Operation Class="XmlExtensions.OptionalPatch">
						<modId>Daria40K.MightyPersonaBondForgePatch</modId>
						<key>Daria40K_MightyPersonaBondForgePatch_PBF_ImpactWeaponry</key>
						<defaultValue>true</defaultValue>

						<caseTrue>
							<Operation Class="XmlExtensions.OptionalPatch">
								<modId>Daria40K.MightyPersonaBondForgePatch</modId>
								<key>Daria40K_MightyPersonaBondForgePatch_DisablePersonaBondForge</key>
								<defaultValue>false</defaultValue>

								<caseFalse>
									<Operation Class="XmlExtensions.PatchOperationAdd">
										<xpath>Defs</xpath>
										<value>
											<RecipeDef ParentName="Make_DV_Chainsword_Bond">
												<defName>Make_DV_Chainsword_Bond</defName>
											</RecipeDef>
											<RecipeDef ParentName="Make_DV_ImpactRifle_Bond">
												<defName>Make_DV_ImpactRifle_Bond</defName>
											</RecipeDef>
											<RecipeDef MayRequire="smartkar.athenaframework" ParentName="Make_DV_ImpactSlugger_Bond">
												<defName>Make_DV_ImpactSlugger_Bond</defName>
											</RecipeDef>
											<RecipeDef ParentName="Make_DV_ImpactStubber_Bond">
												<defName>Make_DV_ImpactStubber_Bond</defName>
											</RecipeDef>
											<RecipeDef ParentName="Make_DV_ImpactCannon_Bond">
												<defName>Make_DV_ImpactCannon_Bond</defName>
											</RecipeDef>
											<RecipeDef ParentName="Make_DV_ImpactSlinger_Bond">
												<defName>Make_DV_ImpactSlinger_Bond</defName>
											</RecipeDef>
											<RecipeDef ParentName="Make_DV_ImpactSniper_Bond">
												<defName>Make_DV_ImpactSniper_Bond</defName>
											</RecipeDef>
										</value>
									</Operation>
								</caseFalse>
							</Operation>
						</caseTrue>
					</Operation>
				</caseTrue>
			</Operation>

			<Operation Class="XmlExtensions.FindMod">
				<mods>
					<li>oskarpotocki.vfe.pirates</li>
				</mods>
				<packageId>true</packageId>

				<caseTrue>
					<Operation Class="XmlExtensions.PatchOperationAdd">
						<xpath>Defs</xpath>
						<value>
							<RecipeDef ParentName="MPBFPM_RecipeDefBase" Name="Make_DV_WarcasketGun_ImpactBolter_Bond" Abstract="True">
								<label>bond warcasket impact bolter</label>
								<description>Bond an warcasket impact bolter.</description>
								<jobString>Bonding a warcasket impact bolter.</jobString>
								<ingredients>
									<li>
										<filter>
											<thingDefs>
												<li>DV_WarcasketGun_ImpactBolter</li>
											</thingDefs>
										</filter>
										<count>1</count>
									</li>
								</ingredients>
								<fixedIngredientFilter>
									<thingDefs>
										<li>DV_WarcasketGun_ImpactBolter</li>
									</thingDefs>
								</fixedIngredientFilter>
								<products>
									<DV_WarcasketGun_ImpactBolter_Bond>1</DV_WarcasketGun_ImpactBolter_Bond>
								</products>
							</RecipeDef>
						</value>
					</Operation>

					<Operation Class="XmlExtensions.OptionalPatch">
						<modId>Daria40K.MightyPersonaBondForgePatch</modId>
						<key>Daria40K_MightyPersonaBondForgePatch_ImpactWeaponry</key>
						<defaultValue>true</defaultValue>

						<caseTrue>
							<Operation Class="XmlExtensions.OptionalPatch">
								<modId>Daria40K.MightyPersonaBondForgePatch</modId>
								<key>Daria40K_MightyPersonaBondForgePatch_OE_ImpactWeaponry</key>
								<defaultValue>true</defaultValue>

								<caseTrue>
									<Operation Class="XmlExtensions.OptionalPatch">
										<modId>Daria40K.MightyPersonaBondForgePatch</modId>
										<key>Daria40K_MightyPersonaBondForgePatch_VanillaFactionsExpandedPirates</key>
										<defaultValue>true</defaultValue>

										<caseTrue>
											<Operation Class="XmlExtensions.OptionalPatch">
												<modId>Daria40K.MightyPersonaBondForgePatch</modId>
												<key>Daria40K_MightyPersonaBondForgePatch_PBF_VanillaFactionsExpandedPirates</key>
												<defaultValue>true</defaultValue>

												<caseTrue>
													<Operation Class="XmlExtensions.OptionalPatch">
														<modId>Daria40K.MightyPersonaBondForgePatch</modId>
														<key>Daria40K_MightyPersonaBondForgePatch_DisablePersonaBondForge</key>
														<defaultValue>false</defaultValue>

														<caseFalse>
															<Operation Class="XmlExtensions.PatchOperationAdd">
																<xpath>Defs</xpath>
																<value>
																	<RecipeDef ParentName="Make_DV_WarcasketGun_ImpactBolter_Bond">
																		<defName>Make_DV_WarcasketGun_ImpactBolter_Bond</defName>
																	</RecipeDef>
																</value>
															</Operation>
														</caseFalse>
													</Operation>
												</caseTrue>
											</Operation>
										</caseTrue>
									</Operation>
								</caseTrue>
							</Operation>
						</caseTrue>
					</Operation>
				</caseTrue>
			</Operation>
		</caseTrue>
	</Operation>
</Patch>