						<ingredients>
							<li>
								<filter>
									<thingDefs>
										<li>EW_Gun_EltexLance</li>
									</thingDefs>
								</filter>
								<count>1</count>
							</li>
						</ingredients>
						<fixedIngredientFilter>
							<thingDefs>
								<li>EW_Gun_EltexLance</li>
							</thingDefs>
						</fixedIngredientFilter>
						<products>
							<EW_Gun_PersonaEltexLance>1</EW_Gun_PersonaEltexLance>
