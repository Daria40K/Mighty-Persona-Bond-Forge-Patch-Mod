                    <RecipeDef ParentName="MPBFPM_RecipeDefBase" Name="Make_Alien_Sniper_Bond" Abstract="True">
                        <label>bond Magnetic alien sniper</label>
                        <description>Bond an Magnetic alien sniper.</description>
