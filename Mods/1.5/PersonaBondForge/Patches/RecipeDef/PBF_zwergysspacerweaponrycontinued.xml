            <li>zal.zwergy</li>
        </mods>
        <packageId>true</packageId>

        <caseTrue>
            <Operation Class="XmlExtensions.PatchOperationAdd">
                <xpath>Defs</xpath>
                <value>
                    <RecipeDef ParentName="MPBFPM_RecipeDefBase" Name="Make_Gun_IL-Pistol_Bond" Abstract="True">
